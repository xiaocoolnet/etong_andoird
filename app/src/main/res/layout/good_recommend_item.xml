<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/ll_good_recommend"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/whilte"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/good_recommend_pic"
            android:layout_width="@dimen/activity_size_120"
            android:layout_height="@dimen/activity_size_120"
            android:layout_centerInParent="true"
            android:layout_marginTop="@dimen/activity_size_10"
            android:background="@drawable/icon_error"
            android:scaleType="fitXY" />

    </RelativeLayout>

    <TextView
        android:id="@+id/good_recommend_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/activity_size_10"
        android:layout_marginTop="@dimen/activity_size_5"
        android:ellipsize="end"
        android:maxLines="2"
        android:text=""
        android:textColor="@color/black2" />
    <TextView
        android:id="@+id/good_recommend_des"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/activity_size_10"
        android:layout_marginTop="@dimen/activity_size_5"
        android:ellipsize="end"
        android:maxLines="2"
        android:text=""
        android:textColor="@color/black2" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/activity_size_30">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="3">

            <TextView
                android:id="@+id/good_recommend_price"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/activity_size_10"
                android:layout_marginTop="@dimen/activity_size_5"
                android:singleLine="true"
                android:text="Â¥100"
                android:textColor="@color/red1"
                android:textSize="18sp" />

        </LinearLayout>

    </LinearLayout>
</LinearLayout>