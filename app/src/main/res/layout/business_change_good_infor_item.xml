<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:layout_marginBottom="1dp"
        android:background="@color/gray_title">

        <RelativeLayout
            android:id="@+id/rl_back"
            android:layout_width="45dp"
            android:layout_height="match_parent">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:layout_marginLeft="10dp"
                android:background="@mipmap/ic_fanhui_left_red" />
        </RelativeLayout>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="修改信息"
            android:textColor="@color/black"
            android:textSize="18sp" />


        <Button
            android:id="@+id/business_btn_save"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:background="@null"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="5dp"
            android:text="保存"
            android:textColor="@color/main_color_red"
            android:textSize="17sp" />
    </RelativeLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/activity_size_90"
        android:layout_marginTop="@dimen/activity_size_15"
        android:background="@color/whilte">

        <EditText
            android:id="@+id/business_et_change_infor"
            android:layout_width="match_parent"
            android:layout_marginLeft="@dimen/activity_size_10"
            android:textSize="@dimen/activity_size_16"
            android:layout_gravity="center_vertical"
            android:layout_height="@dimen/activity_size_80"
            android:hint="信息"
            android:gravity="top"
            android:background="@null"/>

    </LinearLayout>

</LinearLayout>
