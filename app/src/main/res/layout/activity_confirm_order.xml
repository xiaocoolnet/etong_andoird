<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:background="@color/gray_content"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ScrollView
        android:layout_above="@+id/bottom"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true">
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <RelativeLayout
                android:background="@color/gray_title"
                android:layout_width="match_parent"
                android:layout_height="45dp">
                <RelativeLayout
                    android:id="@+id/rl_back"
                    android:layout_width="45dp"
                    android:layout_height="match_parent">
                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@mipmap/ic_fanhui_left_red"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="10dp"
                        />
                </RelativeLayout>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/black"
                    android:textSize="16sp"
                    android:layout_centerInParent="true"
                    android:text="支付订单"
                    />
            </RelativeLayout>
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/view_color"
                ></RelativeLayout>

            <LinearLayout
                android:layout_marginTop="10dp"
                android:id="@+id/ll_address"
                android:orientation="vertical"
                android:visibility="gone"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:layout_marginTop="1dp"
                    android:background="@color/whilte"
                    android:gravity="center_vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10dp"
                        android:text="手机号"
                        android:textColor="@color/black" />

                    <TextView
                        android:id="@+id/et_customer_phone"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginLeft="110dp"
                        android:layout_marginRight="10dp"
                        android:background="@null"
                        android:gravity="center_vertical"
                        android:hint="请输入手机号"
                        android:inputType="number"
                        android:maxLength="11"
                        android:textSize="14sp" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:layout_marginTop="1dp"
                    android:background="@color/whilte"
                    android:gravity="center_vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10dp"
                        android:text="姓名"
                        android:textColor="@color/black" />

                    <TextView
                        android:id="@+id/et_customer_name"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginLeft="123dp"
                        android:layout_marginRight="10dp"
                        android:background="@null"
                        android:gravity="center_vertical"
                        android:hint="请输入姓名"
                        android:inputType="text"
                        android:maxLength="11"
                        android:textSize="14sp" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/activity_size_40"
                    android:background="@color/whilte">

                    <TextView
                        android:id="@+id/et_change_infor"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/activity_size_30"
                        android:layout_gravity="center_vertical"
                        android:layout_marginLeft="@dimen/activity_size_10"
                        android:background="@null"
                        android:hint="收货地址"
                        android:maxLines="2"
                        android:textSize="@dimen/activity_size_14" />

                </LinearLayout>
            </LinearLayout>
            <LinearLayout
                android:id="@+id/ll_delivery_address"
                android:background="@color/whilte"
                android:layout_marginTop="10dp"
                android:gravity="center_vertical"
                android:layout_width="match_parent"
                android:layout_height="40dp">
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@mipmap/ic_tianjia"
                    android:layout_marginLeft="10dp"
                    />

                <TextView
                    android:id="@+id/tv_judge"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:textColor="@color/black"
                    android:text="添加收货地址"
                    />
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@mipmap/ic_next"
                    android:layout_marginLeft="240dp"
                    android:layout_marginRight="10dp"
                    />

            </LinearLayout>
            <RelativeLayout
                android:background="@color/whilte"
                android:layout_marginTop="10dp"
                android:layout_width="match_parent"
                android:layout_height="35dp">
                <LinearLayout
                    android:gravity="center_vertical"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">
                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@mipmap/ic_shop"
                        android:layout_marginLeft="10dp"
                        />I
                    <TextView
                        android:id="@+id/tx_shop_name"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10dp"
                        android:textColor="@color/black"
                        android:text="e小妞原创衣柜"
                        />
                </LinearLayout>
            </RelativeLayout>
            <RelativeLayout
                android:background="@color/whilte"
                android:layout_marginTop="1dp"
                android:layout_width="match_parent"
                android:layout_height="120dp">
                <ImageView
                    android:id="@+id/img_goods_pic"
                    android:layout_width="101dp"
                    android:layout_height="101dp"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="10dp"
                    android:background="@mipmap/ic_xihuan"
                    />
                <TextView
                    android:id="@+id/tx_goods_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="121dp"
                    android:layout_marginTop="15dp"
                    android:text="泰国潮牌重工业花朵刺绣"
                    android:layout_marginRight="10dp"
                    android:maxLines="2"
                    android:textColor="@color/black"
                    />
                <TextView
                    android:id="@+id/tv_lebal"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="121dp"
                    android:layout_marginTop="54dp"
                    android:text="颜色分类：图片色；尺码：5"
                    android:textSize="12sp"
                    android:layout_marginRight="10dp"
                    android:maxLines="1"
                    />
                <TextView
                    android:id="@+id/tx_goods_count"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="121dp"
                    android:layout_marginTop="74dp"
                    android:text="数量：1"
                    android:textSize="12sp"
                    />
                <TextView
                    android:id="@+id/tx_goods_price"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="121dp"
                    android:layout_marginTop="99dp"
                    android:text="￥129.00"
                    android:textColor="@color/main_color_red"
                    />
            </RelativeLayout>
            <LinearLayout
                android:background="@color/whilte"
                android:layout_marginTop="1dp"
                android:gravity="center_vertical"
                android:layout_width="match_parent"
                android:layout_height="50dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:textColor="@color/black"
                    android:text="配送方式"
                    />

                <TextView
                    android:id="@+id/tv_kuaidi"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="200dp"
                    android:textColor="@color/black"
                    android:text="快递 免递"
                    />
            </LinearLayout>
            <RelativeLayout
                android:background="@color/whilte"
                android:layout_marginTop="1dp"
                android:layout_width="match_parent"
                android:layout_height="67dp">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="10dp"
                    android:text="小计"
                    android:textColor="@color/black"
                    />
                <TextView
                    android:id="@+id/tx_goods_price_subtotal"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_marginRight="10dp"
                    android:layout_marginTop="10dp"
                    android:text="￥188"
                    android:textColor="@color/main_color_red"
                    />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_marginRight="10dp"
                    android:layout_marginTop="30dp"
                    android:text="￥99(商家优惠)"
                    android:textSize="12sp"
                    android:textColor="@color/gray"
                    />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_marginRight="10dp"
                    android:layout_marginTop="50dp"
                    android:text="-￥10(优惠券)"
                    android:textSize="12sp"
                    android:textColor="@color/gray"
                    />
            </RelativeLayout>

            <RelativeLayout
                android:layout_marginTop="1dp"
                android:background="@color/whilte"
                android:layout_width="match_parent"
                android:layout_height="120dp"
                >
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="10dp"
                    android:text="备注"
                    android:textColor="@color/black"
                    />
                <RelativeLayout
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="40dp"
                    android:background="@drawable/edit_border_gray"
                    android:layout_width="356dp"
                    android:layout_height="60dp">
                    <EditText
                        android:id="@+id/et_customer_remark"
                        android:layout_marginTop="10dp"
                        android:layout_marginLeft="10dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_centerHorizontal="true"
                        android:hint="留下你对卖家想说的话吧"
                        android:background="@null"
                        android:textSize="12sp"
                        />


                </RelativeLayout>
            </RelativeLayout>


            <!--支付方式选择-->

            <RelativeLayout
                android:id="@+id/rl_payWay0"
                android:layout_width="match_parent"
                android:layout_height="@dimen/activity_size_55"
                android:layout_marginTop="@dimen/activity_size_22"
                android:background="@color/whilte">

                <ImageView
                    android:id="@+id/pay_way0_icon"
                    android:layout_width="@dimen/activity_size_30"
                    android:layout_height="@dimen/activity_size_30"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="@dimen/activity_size_10"
                    android:background="@mipmap/ic_ka" />

                <TextView
                    android:id="@+id/pay_way0_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/activity_size_15"
                    android:layout_marginTop="@dimen/activity_size_10"
                    android:layout_toRightOf="@+id/pay_way0_icon"
                    android:text="余额支付"
                    android:textColor="@color/black2"
                    android:textSize="@dimen/activity_size_15" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/pay_way0_name"
                    android:layout_marginLeft="@dimen/activity_size_15"
                    android:layout_marginTop="@dimen/activity_size_5"
                    android:layout_toRightOf="@+id/pay_way0_icon"
                    android:text="使用e通商城钱包余额支付"
                    android:textColor="@color/black3"
                    android:textSize="@dimen/activity_size_12" />

                <ImageView
                    android:id="@+id/iv_payWay0_item"
                    android:layout_width="@dimen/activity_size_18"
                    android:layout_height="@dimen/activity_size_18"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="@dimen/activity_size_10"
                    android:background="@drawable/btn_selecter_icon" />

            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/rl_payWay1"
                android:layout_width="match_parent"
                android:layout_height="@dimen/activity_size_55"
                android:layout_marginTop="@dimen/activity_size_1"
                android:background="@color/whilte">

                <ImageView
                    android:id="@+id/pay_way1_icon"
                    android:layout_width="@dimen/activity_size_30"
                    android:layout_height="@dimen/activity_size_30"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="@dimen/activity_size_10"
                    android:background="@mipmap/ic_weixintubiao" />

                <TextView
                    android:id="@+id/pay_way1_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/activity_size_15"
                    android:layout_marginTop="@dimen/activity_size_10"
                    android:layout_toRightOf="@+id/pay_way1_icon"
                    android:text="微信支付"
                    android:textColor="@color/black2"
                    android:textSize="@dimen/activity_size_15" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/pay_way1_name"
                    android:layout_marginLeft="@dimen/activity_size_15"
                    android:layout_marginTop="@dimen/activity_size_5"
                    android:layout_toRightOf="@+id/pay_way1_icon"
                    android:text="推荐安装微信5.0及以上用户使用"
                    android:textColor="@color/black3"
                    android:textSize="@dimen/activity_size_12" />

                <ImageView
                    android:id="@+id/iv_payWay1_item"
                    android:layout_width="@dimen/activity_size_18"
                    android:layout_height="@dimen/activity_size_18"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="@dimen/activity_size_10"
                    android:background="@drawable/btn_selecter_icon" />

            </RelativeLayout>


            <RelativeLayout
                android:id="@+id/rl_payWay2"
                android:layout_width="match_parent"
                android:layout_height="@dimen/activity_size_55"
                android:layout_marginTop="@dimen/activity_size_1"
                android:background="@color/whilte">

                <ImageView
                    android:id="@+id/pay_way2_icon"
                    android:layout_width="@dimen/activity_size_30"
                    android:layout_height="@dimen/activity_size_30"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="@dimen/activity_size_10"
                    android:background="@mipmap/ic_bao" />

                <TextView
                    android:id="@+id/pay_way2_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/activity_size_15"
                    android:layout_marginTop="@dimen/activity_size_10"
                    android:layout_toRightOf="@+id/pay_way2_icon"
                    android:text="支付宝支付"
                    android:textColor="@color/black2"
                    android:textSize="@dimen/activity_size_15" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/pay_way2_name"
                    android:layout_marginLeft="@dimen/activity_size_15"
                    android:layout_marginTop="@dimen/activity_size_5"
                    android:layout_toRightOf="@+id/pay_way2_icon"
                    android:text="推荐有支付宝的用户使用"
                    android:textColor="@color/black3"
                    android:textSize="@dimen/activity_size_12" />

                <ImageView
                    android:id="@+id/iv_payWay2_item"
                    android:layout_width="@dimen/activity_size_18"
                    android:layout_height="@dimen/activity_size_18"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="@dimen/activity_size_10"
                    android:background="@drawable/btn_selecter_icon" />

            </RelativeLayout>
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="10dp"
                android:background="@color/view_color"
                ></RelativeLayout>

        </LinearLayout>
    </ScrollView>

    <LinearLayout
        android:id="@+id/bottom"
        android:background="@color/whilte"
        android:layout_alignParentBottom="true"
        android:layout_width="match_parent"
        android:layout_height="50dp">
        <TextView
            android:layout_width="0dp"
            android:layout_weight="0.5"
            android:gravity="center_vertical"
            android:paddingLeft="10dp"
            android:text="合计 : "
            android:textColor="@color/black"
            android:layout_height="match_parent" />
        <TextView
            android:id="@+id/tx_goods_price_total"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:gravity="center_vertical"
            android:paddingLeft="10dp"
            android:text=" ￥0"
            android:textColor="@color/main_color_red"
            android:layout_height="match_parent" />
        <TextView
            android:id="@+id/tx_comfirm_order"
            android:layout_width="0dp"
            android:layout_weight="1.5"
            android:gravity="center"
            android:paddingLeft="10dp"
            android:text="提交订单"
            android:textColor="@color/whilte"
            android:background="@color/main_color_red"
            android:layout_height="match_parent" />
    </LinearLayout>
</RelativeLayout>