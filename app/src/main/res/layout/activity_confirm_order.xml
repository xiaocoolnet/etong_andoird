<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/gray_content"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:background="@color/gray_title">

        <RelativeLayout
            android:id="@+id/rl_back"
            android:layout_width="45dp"
            android:layout_height="match_parent">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="10dp"
                android:background="@mipmap/ic_fanhui_left_red" />
        </RelativeLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="支付订单"
            android:textColor="@color/black"
            android:textSize="16sp" />
    </RelativeLayout>


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">


        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_above="@+id/bottom"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">


                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@color/view_color"></RelativeLayout>


                <!--获取我的收货地址-->

                <LinearLayout
                    android:id="@+id/top_address"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/activity_size_60"
                    android:background="@color/whilte"
                    android:orientation="horizontal">

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="5.8">

                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerInParent="true"
                            android:background="@mipmap/ic_dingwei_red" />

                    </RelativeLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1.5"
                        android:orientation="vertical">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:orientation="horizontal">

                            <TextView
                                android:id="@+id/et_customer_name"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="bottom"
                                android:text="e通商城"
                                android:textColor="@color/black"
                                android:textSize="@dimen/activity_size_15" />

                            <TextView
                                android:id="@+id/et_customer_phone"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="bottom"
                                android:layout_marginLeft="@dimen/activity_size_20"
                                android:text="18888888888"
                                android:textColor="@color/black4"
                                android:textSize="@dimen/activity_size_13" />

                        </LinearLayout>

                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_weight="1">

                            <TextView
                                android:id="@+id/et_change_infor"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text=""
                                android:textColor="@color/black2"
                                android:textSize="@dimen/activity_size_13" />

                        </RelativeLayout>

                    </LinearLayout>

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="6">

                        <ImageView
                            android:layout_width="@dimen/activity_size_6"
                            android:layout_height="@dimen/activity_size_15"
                            android:layout_alignParentRight="true"
                            android:layout_centerVertical="true"
                            android:layout_marginRight="@dimen/activity_size_10"
                            android:background="@mipmap/ic_next" />
                    </RelativeLayout>

                </LinearLayout>


                <!--添加收货地址按钮               隐藏-->
                <LinearLayout
                    android:visibility="gone"
                    android:id="@+id/ll_delivery_address"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/activity_size_35"
                    android:layout_marginTop="@dimen/activity_size_1"
                    android:background="@color/whilte"
                    android:orientation="horizontal">

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="5.8">

                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerInParent="true"
                            android:background="@mipmap/ic_tianjia" />

                    </RelativeLayout>

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1.5"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/tv_judge"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerVertical="true"
                            android:layout_marginLeft="10dp"
                            android:text="添加收货地址"
                            android:textColor="@color/black" />

                    </RelativeLayout>

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="6">

                        <ImageView
                            android:layout_width="@dimen/activity_size_6"
                            android:layout_height="@dimen/activity_size_15"
                            android:layout_alignParentRight="true"
                            android:layout_centerVertical="true"
                            android:layout_marginRight="@dimen/activity_size_10"
                            android:background="@mipmap/ic_next" />
                    </RelativeLayout>

                </LinearLayout>


                <!--添加收货地址按钮-->

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="35dp"
                    android:layout_marginTop="@dimen/activity_size_5"
                    android:background="@color/whilte">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:gravity="center_vertical">

                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="10dp"
                            android:background="@mipmap/ic_shop" />I

                        <TextView
                            android:id="@+id/tx_shop_name"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="10dp"
                            android:text="e小妞原创衣柜"
                            android:textColor="@color/black" />
                    </LinearLayout>
                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="120dp"
                    android:layout_marginTop="1dp"
                    android:background="@color/whilte">

                    <ImageView
                        android:id="@+id/img_goods_pic"
                        android:layout_width="101dp"
                        android:layout_height="101dp"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="10dp"
                        android:background="@mipmap/ic_xihuan" />

                    <TextView
                        android:id="@+id/tx_goods_name"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="121dp"
                        android:layout_marginRight="10dp"
                        android:layout_marginTop="15dp"
                        android:maxLines="2"
                        android:text="泰国潮牌重工业花朵刺绣"
                        android:textColor="@color/black" />

                    <TextView
                        android:id="@+id/tv_lebal"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="121dp"
                        android:layout_marginRight="10dp"
                        android:layout_marginTop="54dp"
                        android:maxLines="1"
                        android:text="颜色分类：图片色；尺码：5"
                        android:textSize="12sp" />

                    <TextView
                        android:id="@+id/tx_goods_count"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="121dp"
                        android:layout_marginTop="74dp"
                        android:text="数量：1"
                        android:textSize="12sp" />

                    <TextView
                        android:id="@+id/tx_goods_price"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="121dp"
                        android:layout_marginTop="99dp"
                        android:text="￥129.00"
                        android:textColor="@color/main_color_red" />
                </RelativeLayout>


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/activity_size_40"
                    android:layout_marginTop="@dimen/activity_size_1"
                    android:background="@color/whilte"
                    android:orientation="horizontal">

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="3.5">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerVertical="true"
                            android:layout_marginLeft="@dimen/activity_size_10"
                            android:text="店铺优惠券"
                            android:textColor="@color/black2"
                            android:textSize="@dimen/activity_size_14" />


                    </RelativeLayout>

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="2"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentRight="true"
                            android:layout_centerVertical="true"
                            android:layout_marginRight="@dimen/activity_size_10"
                            android:text="店铺优惠券满6减2"
                            android:textColor="@color/red1"
                            android:textSize="@dimen/activity_size_13" />


                    </RelativeLayout>

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="5">

                        <ImageView
                            android:layout_width="@dimen/activity_size_6"
                            android:layout_height="@dimen/activity_size_15"
                            android:layout_alignParentRight="true"
                            android:layout_centerVertical="true"
                            android:layout_marginRight="@dimen/activity_size_10"
                            android:background="@mipmap/ic_next" />
                    </RelativeLayout>

                </LinearLayout>
                <!--配送方式-->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/activity_size_40"
                    android:layout_marginTop="@dimen/activity_size_1"
                    android:background="@color/whilte"
                    android:gravity="center_vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10dp"
                        android:text="配送方式"
                        android:textSize="@dimen/activity_size_14"
                        android:textColor="@color/black2" />

                    <TextView
                        android:id="@+id/tv_kuaidi"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="200dp"
                        android:text="快递 免运费"
                        android:textSize="@dimen/activity_size_13"
                        android:textColor="@color/red1" />
                </LinearLayout>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="67dp"
                    android:layout_marginTop="1dp"
                    android:background="@color/whilte">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10dp"
                        android:layout_marginTop="10dp"
                        android:textSize="@dimen/activity_size_14"
                        android:text="小计"
                        android:textColor="@color/black2" />

                    <TextView
                        android:id="@+id/tx_goods_price_subtotal"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_marginRight="10dp"
                        android:layout_marginTop="10dp"
                        android:text="￥188"
                        android:textColor="@color/main_color_red" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_marginRight="10dp"
                        android:layout_marginTop="30dp"
                        android:text="￥99(商家优惠)"
                        android:textColor="@color/gray"
                        android:textSize="12sp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_marginRight="10dp"
                        android:layout_marginTop="50dp"
                        android:text="-￥10(优惠券)"
                        android:textColor="@color/gray"
                        android:textSize="12sp" />
                </RelativeLayout>


                <!--支付方式选择-->

                <RelativeLayout
                    android:id="@+id/rl_payWay0"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/activity_size_55"
                    android:layout_marginTop="@dimen/activity_size_5"
                    android:background="@color/whilte">

                    <ImageView
                        android:id="@+id/pay_way0_icon"
                        android:layout_width="@dimen/activity_size_30"
                        android:layout_height="@dimen/activity_size_30"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="@dimen/activity_size_10"
                        android:background="@mipmap/ic_ka" />

                    <TextView
                        android:id="@+id/pay_way0_name"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/activity_size_15"
                        android:layout_marginTop="@dimen/activity_size_10"
                        android:layout_toRightOf="@+id/pay_way0_icon"
                        android:text="余额支付"
                        android:textColor="@color/black2"
                        android:textSize="@dimen/activity_size_15" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/pay_way0_name"
                        android:layout_marginLeft="@dimen/activity_size_15"
                        android:layout_marginTop="@dimen/activity_size_5"
                        android:layout_toRightOf="@+id/pay_way0_icon"
                        android:text="使用e通商城钱包余额支付"
                        android:textColor="@color/black3"
                        android:textSize="@dimen/activity_size_12" />

                    <ImageView
                        android:id="@+id/iv_payWay0_item"
                        android:layout_width="@dimen/activity_size_18"
                        android:layout_height="@dimen/activity_size_18"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:layout_marginRight="@dimen/activity_size_10"
                        android:background="@drawable/btn_selecter_icon" />

                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/rl_payWay1"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/activity_size_55"
                    android:layout_marginTop="@dimen/activity_size_1"
                    android:background="@color/whilte">

                    <ImageView
                        android:id="@+id/pay_way1_icon"
                        android:layout_width="@dimen/activity_size_30"
                        android:layout_height="@dimen/activity_size_30"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="@dimen/activity_size_10"
                        android:background="@mipmap/ic_weixintubiao" />

                    <TextView
                        android:id="@+id/pay_way1_name"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/activity_size_15"
                        android:layout_marginTop="@dimen/activity_size_10"
                        android:layout_toRightOf="@+id/pay_way1_icon"
                        android:text="微信支付"
                        android:textColor="@color/black2"
                        android:textSize="@dimen/activity_size_15" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/pay_way1_name"
                        android:layout_marginLeft="@dimen/activity_size_15"
                        android:layout_marginTop="@dimen/activity_size_5"
                        android:layout_toRightOf="@+id/pay_way1_icon"
                        android:text="推荐安装微信5.0及以上用户使用"
                        android:textColor="@color/black3"
                        android:textSize="@dimen/activity_size_12" />

                    <ImageView
                        android:id="@+id/iv_payWay1_item"
                        android:layout_width="@dimen/activity_size_18"
                        android:layout_height="@dimen/activity_size_18"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:layout_marginRight="@dimen/activity_size_10"
                        android:background="@drawable/btn_selecter_icon" />

                </RelativeLayout>


                <RelativeLayout
                    android:id="@+id/rl_payWay2"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/activity_size_55"
                    android:layout_marginTop="@dimen/activity_size_1"
                    android:background="@color/whilte">

                    <ImageView
                        android:id="@+id/pay_way2_icon"
                        android:layout_width="@dimen/activity_size_30"
                        android:layout_height="@dimen/activity_size_30"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="@dimen/activity_size_10"
                        android:background="@mipmap/ic_bao" />

                    <TextView
                        android:id="@+id/pay_way2_name"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/activity_size_15"
                        android:layout_marginTop="@dimen/activity_size_10"
                        android:layout_toRightOf="@+id/pay_way2_icon"
                        android:text="支付宝支付"
                        android:textColor="@color/black2"
                        android:textSize="@dimen/activity_size_15" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/pay_way2_name"
                        android:layout_marginLeft="@dimen/activity_size_15"
                        android:layout_marginTop="@dimen/activity_size_5"
                        android:layout_toRightOf="@+id/pay_way2_icon"
                        android:text="推荐有支付宝的用户使用"
                        android:textColor="@color/black3"
                        android:textSize="@dimen/activity_size_12" />

                    <ImageView
                        android:id="@+id/iv_payWay2_item"
                        android:layout_width="@dimen/activity_size_18"
                        android:layout_height="@dimen/activity_size_18"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:layout_marginRight="@dimen/activity_size_10"
                        android:background="@drawable/btn_selecter_icon" />

                </RelativeLayout>


                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="120dp"
                    android:layout_marginTop="1dp"
                    android:background="@color/whilte">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10dp"
                        android:layout_marginTop="10dp"
                        android:text="备注"
                        android:textColor="@color/black" />

                    <RelativeLayout
                        android:layout_width="356dp"
                        android:layout_height="60dp"
                        android:layout_centerHorizontal="true"
                        android:layout_marginTop="40dp"
                        android:background="@drawable/edit_border_gray">

                        <EditText
                            android:id="@+id/et_customer_remark"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_centerHorizontal="true"
                            android:layout_marginLeft="10dp"
                            android:layout_marginTop="10dp"
                            android:background="@null"
                            android:hint="留下你对卖家想说的话吧"
                            android:textSize="12sp" />


                    </RelativeLayout>
                </RelativeLayout>


                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/activity_size_1"
                    android:background="@color/view_color"></RelativeLayout>

            </LinearLayout>
        </ScrollView>

        <LinearLayout
            android:id="@+id/bottom"
            android:layout_width="match_parent"
            android:layout_height="@dimen/activity_size_40"
            android:layout_alignParentBottom="true"
            android:layout_gravity="bottom"
            android:background="@color/whilte">

            <TextView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:paddingLeft="10dp"
                android:text="实付款："
                android:textColor="@color/black" />

            <TextView
                android:id="@+id/tx_goods_price_total"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center_vertical"
                android:paddingLeft="10dp"
                android:text="¥15.9"
                android:textColor="@color/main_color_red"
                android:textSize="@dimen/activity_size_18" />

            <TextView
                android:id="@+id/tx_comfirm_order"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1.5"
                android:background="@color/main_color_red"
                android:gravity="center"
                android:paddingLeft="10dp"
                android:text="提交并支付"
                android:textColor="@color/whilte" />
        </LinearLayout>
    </RelativeLayout>
</LinearLayout>