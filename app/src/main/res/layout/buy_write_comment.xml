<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/gray2"
    android:orientation="vertical">

    <include layout="@layout/activity_top"></include>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/activity_size_80"
            android:background="@color/whilte">

            <ImageView
                android:id="@+id/buy_write_comment_pic"
                android:layout_width="@dimen/activity_size_60"
                android:layout_height="@dimen/activity_size_60"
                android:layout_centerVertical="true"
                android:layout_marginLeft="@dimen/activity_size_10" />

            <TextView
                android:id="@+id/buy_write_comment_good_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/activity_size_10"
                android:layout_marginTop="@dimen/activity_size_20"
                android:layout_toRightOf="@+id/buy_write_comment_pic"
                android:text="短裙短裙短裙"
                android:textColor="@color/black2" />
        </RelativeLayout>


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/activity_size_100"
            android:layout_marginTop="@dimen/activity_size_1"
            android:background="@color/whilte">

            <EditText
                android:id="@+id/buy_write_comment_et"
                android:layout_width="@dimen/activity_size_355"
                android:layout_height="@dimen/activity_size_60"
                android:layout_centerHorizontal="true"
                android:background="@null"
                android:hint="亲，写下对宝贝的评价吧"
                android:textSize="@dimen/activity_size_12" />
        </RelativeLayout>


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/activity_size_50"
            android:layout_marginTop="@dimen/activity_size_10"
            android:background="@color/whilte">

            <TextView
                android:id="@+id/buy_write_comment_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/activity_size_10"
                android:text="店铺评分"
                android:textColor="@color/black2"
                android:layout_centerVertical="true"/>
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@mipmap/ic_yellowstar_4_5"
                android:layout_centerVertical="true"
                android:layout_toRightOf="@+id/buy_write_comment_name"
                android:layout_marginLeft="@dimen/activity_size_10"

                />


        </RelativeLayout>
    </LinearLayout>

    <RelativeLayout
        android:id="@+id/buy_write_comment_now"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="5.5"
        android:background="@color/red1">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="立即评价"
            android:textColor="@color/whilte"
            android:textSize="@dimen/activity_size_15" />

    </RelativeLayout>
</LinearLayout>