<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <RelativeLayout
        android:background="@color/main_color_red"
        android:layout_width="match_parent"
        android:layout_height="45dp">
        <RelativeLayout
            android:id="@+id/rl_back"
            android:layout_width="45dp"
            android:layout_height="match_parent">
            <ImageView
                android:layout_centerInParent="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@mipmap/ic_fanhui_left"
                android:layout_marginLeft="10dp"
                />
        </RelativeLayout>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="认证分类"
            android:textColor="@color/whilte"
            android:textSize="18sp"
            />
    </RelativeLayout>
    <RelativeLayout
        android:background="@color/main_color_red"
        android:layout_width="match_parent"
        android:layout_height="match_parent">



        <TextView
            android:layout_marginTop="97dp"
            android:layout_width="200dp"
            android:layout_height="50dp"
            android:background="@drawable/btn_authentication"
            android:gravity="center"
            android:text="团购商家认证"
            android:textColor="@color/whilte"
            android:textSize="16sp"
            android:layout_alignParentTop="true"
            android:layout_alignLeft="@+id/textView9"
            android:layout_alignStart="@+id/textView9"
            android:id="@+id/textView10" />
        <TextView
            android:layout_centerHorizontal="true"
            android:layout_below="@+id/textView10"
            android:layout_marginTop="45dp"
            android:layout_width="200dp"
            android:layout_height="50dp"
            android:background="@drawable/btn_authentication"
            android:gravity="center"
            android:text="个人商家认证"
            android:textColor="@color/whilte"
            android:textSize="16sp"
            android:id="@+id/textView9" />

        <TextView
            android:layout_centerHorizontal="true"
            android:layout_below="@+id/textView9"
            android:layout_marginTop="@dimen/activity_size_45"
            android:layout_width="200dp"
            android:layout_height="50dp"
            android:background="@drawable/btn_authentication"
            android:gravity="center"
            android:text="开店指引"
            android:textColor="@color/whilte"
            android:textSize="16sp"
            android:id="@+id/start_shop_guide" />

    </RelativeLayout>
</LinearLayout>