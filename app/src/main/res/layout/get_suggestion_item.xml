<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/whilte">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/activity_size_80">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <TextView
                android:id="@+id/write_suggestions_content"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/activity_size_5"
                android:layout_marginTop="@dimen/activity_size_3"
                android:ellipsize="end"
                android:maxLines="4"
                android:text=""
                android:textColor="@color/black1"
                android:textSize="@dimen/text_size_13" />

            <TextView
                android:id="@+id/write_suggestions_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_alignParentRight="true"
                android:layout_marginLeft="@dimen/activity_size_5"
                android:maxLines="1"
                android:layout_marginRight="@dimen/activity_size_5"
                android:text=""
                android:textColor="@color/black5"
                android:layout_marginBottom="@dimen/activity_size_3"
                android:textSize="@dimen/text_size_10" />

        </RelativeLayout>

    </LinearLayout>
</LinearLayout>
