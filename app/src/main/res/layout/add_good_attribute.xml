<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/gray2"
    android:orientation="vertical">

    <include layout="@layout/activity_top"></include>

    <cn.xiaocool.android_etong.util.ReboundScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/activity_size_400"
                android:layout_weight="1"
                >

                <cn.xiaocool.android_etong.util.NoScrollGridView

                    android:id="@+id/gridView_add_good_attribute"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:columnWidth="@dimen/activity_size_10"
                    android:gravity="center"
                    android:horizontalSpacing="@dimen/activity_size_5"
                    android:numColumns="3"
                    android:padding="@dimen/activity_size_1"
                    android:stretchMode="columnWidth"
                    android:verticalSpacing="@dimen/activity_size_5"></cn.xiaocool.android_etong.util.NoScrollGridView>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                >

                <TextView
                    android:id="@+id/add_good_attribute_btn_upload"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/activity_size_50"
                    android:background="@color/red1"
                    android:gravity="center"
                    android:text="立即上传"
                    android:textColor="@color/whilte"
                    android:textSize="@dimen/activity_size_15" />
            </LinearLayout>
        </LinearLayout>
    </cn.xiaocool.android_etong.util.ReboundScrollView>
</LinearLayout>
