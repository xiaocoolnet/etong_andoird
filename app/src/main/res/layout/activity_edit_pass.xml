<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:background="@color/gray2"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:id="@+id/lin_phone"
        android:background="@color/whilte"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
    </RelativeLayout>
    <RelativeLayout
        android:background="@color/whilte"
        android:layout_width="match_parent"
        android:layout_height="@dimen/activity_size_45"
        >        <!--返回按钮的布局-->
        <RelativeLayout
            android:id="@+id/rl_back"
            android:layout_width="@dimen/activity_size_60"
            android:layout_height="match_parent">
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@mipmap/ic_fanhui_left_red"
                android:layout_centerVertical="true"
                android:layout_marginLeft="@dimen/activity_size_15"/>
        </RelativeLayout>
        <!--标题头文本-->
        <TextView
            android:id="@+id/top_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/text_size_20"
            android:layout_centerInParent="true"
            android:textColor="@color/black"
            android:text="修改密码"
            />
        <TextView
            android:id="@+id/top_upload"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="18sp"
            android:layout_centerVertical="true"
            android:layout_marginRight="10dp"
            android:layout_alignParentRight="true"
            android:textColor="@color/black"
            android:text="提交"
            />

    </RelativeLayout>
    <EditText
        android:id="@+id/ed_pass"
        android:paddingLeft="10dp"
        android:layout_marginTop="15dp"
        android:background="@color/whilte"
        android:layout_width="match_parent"
        android:layout_height="40dp" />

</LinearLayout>