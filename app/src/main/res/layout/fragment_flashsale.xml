<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="cn.xiaocool.android_etong.UI.Main.FlashSaleActivity">





                <RelativeLayout
                    android:id="@+id/rl_judge"
                    android:background="@color/main_color_red"
                    android:layout_width="match_parent"
                    android:layout_height="25dp"
                    >
                        <TextView
                            android:id="@+id/tv_zhuangtai"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:gravity="center"
                            android:layout_marginLeft="10dp"
                            android:text="即将开始,先下单先得哦"
                            android:textColor="@color/whilte"
                            android:textSize="12sp"
                            />
                        <TextView
                            android:layout_toLeftOf="@+id/tv_time1"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:gravity="center"
                            android:id="@+id/tv_judge"
                            android:textColor="@color/whilte"
                            android:text="距结束"
                            android:layout_marginRight="5dp"
                            />
                        <TextView
                            android:layout_toLeftOf="@+id/tv_time2"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:gravity="center"
                            android:id="@+id/tv_time1"
                            android:textColor="@color/whilte"
                            />
                        <TextView
                            android:layout_toLeftOf="@+id/tv_time3"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:gravity="center"
                            android:id="@+id/tv_time2"
                            android:textColor="@color/whilte"

                            />
                        <TextView
                            android:layout_alignParentRight="true"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:layout_marginRight="10dp"
                            android:gravity="center"
                            android:id="@+id/tv_time3"
                            android:textColor="@color/whilte"

                            />


                </RelativeLayout>


        <com.handmark.pulltorefresh.library.PullToRefreshListView
            android:id="@+id/list"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:divider="@color/bg_main_gray">

        </com.handmark.pulltorefresh.library.PullToRefreshListView>



</LinearLayout>