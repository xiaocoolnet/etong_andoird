<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/gray2"
    android:orientation="vertical">

    <include layout="@layout/activity_top"></include>

    <cn.xiaocool.android_etong.util.ReboundScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">
            <!--上面红色-->
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/activity_size_100"
                android:background="@color/red1">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="@dimen/activity_size_35"
                    android:text="卖家已发货"
                    android:textColor="@color/whilte"
                    android:textSize="@dimen/activity_size_15" />

                <ImageView
                    android:layout_width="@dimen/activity_size_58"
                    android:layout_height="@dimen/activity_size_50"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="@dimen/activity_size_35"
                    android:background="@mipmap/order_car_icon" />

            </RelativeLayout>
            <!--收货地址-->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/whilte"
                android:orientation="horizontal">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="8">

                    <ImageView
                        android:layout_width="@dimen/activity_size_16"
                        android:layout_height="@dimen/activity_size_19"
                        android:layout_centerInParent="true"
                        android:background="@mipmap/order_local_icon" />

                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1">

                    <TextView
                        android:id="@+id/order_reserve_man"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/activity_size_10"
                        android:text="收货人:"
                        android:textColor="@color/black5"
                        android:textSize="@dimen/activity_size_15" />

                    <TextView
                        android:id="@+id/order_reserve_name"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/activity_size_3"
                        android:layout_marginTop="@dimen/activity_size_10"
                        android:layout_toRightOf="@+id/order_reserve_man"
                        android:text="王志恒"
                        android:textColor="@color/black5"
                        android:textSize="@dimen/activity_size_15" />

                    <!--收货地址-->
                    <TextView
                        android:id="@+id/order_reserve_address"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/order_reserve_man"
                        android:layout_marginBottom="@dimen/activity_size_10"
                        android:layout_marginTop="@dimen/activity_size_10"
                        android:text="收货人:"
                        android:textColor="@color/black5"
                        android:textSize="@dimen/activity_size_15" />

                    <TextView
                        android:id="@+id/order_reserve_address_name"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/order_reserve_man"
                        android:layout_marginLeft="@dimen/activity_size_3"
                        android:layout_marginTop="@dimen/activity_size_10"
                        android:layout_toRightOf="@+id/order_reserve_address"
                        android:text="北京市朝阳区科技大厦"
                        android:textColor="@color/black5"
                        android:textSize="@dimen/activity_size_15" />


                    <TextView
                        android:id="@+id/order_reserve_phone"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_marginRight="@dimen/activity_size_10"
                        android:layout_marginTop="@dimen/activity_size_10"
                        android:text="15853503932"
                        android:textColor="@color/black5"
                        android:textSize="@dimen/activity_size_15" />

                </RelativeLayout>

            </LinearLayout>


            <!--订单属性详情-->

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="@dimen/activity_size_10"
                android:orientation="vertical">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/activity_size_45"
                    android:background="@color/whilte">

                    <ImageView
                        android:id="@+id/shop_pic_icon"
                        android:layout_width="@dimen/activity_size_19"
                        android:layout_height="@dimen/activity_size_16"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="@dimen/activity_size_10"
                        android:background="@mipmap/ic_shop_red" />

                    <TextView
                        android:id="@+id/order_details_shop_name_tv"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="@dimen/activity_size_5"
                        android:layout_toRightOf="@+id/shop_pic_icon"
                        android:text="e小妞"
                        android:textColor="@color/black2"
                        android:textSize="@dimen/activity_size_14" />

                    <TextView
                        android:id="@+id/order_details_good_status_tv"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:layout_marginRight="@dimen/activity_size_15"
                        android:text="待发货"
                        android:textColor="@color/red1"
                        android:textSize="@dimen/text_size_14" />
                    <!--灰色线-->
                    <ImageView
                        android:layout_width="@dimen/activity_size_355"
                        android:layout_height="@dimen/activity_size_1"
                        android:layout_alignParentBottom="true"
                        android:layout_centerHorizontal="true"
                        android:background="@color/gray2" />
                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/whilte">

                    <ImageView
                        android:id="@+id/img_shopping_chanpin"
                        android:layout_width="100dp"
                        android:layout_height="100dp"
                        android:layout_marginLeft="@dimen/activity_size_10"
                        android:layout_marginTop="@dimen/activity_size_10"
                        android:background="@mipmap/ic_chanpin" />

                    <TextView
                        android:id="@+id/order_details_good_name_tv"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignTop="@+id/img_shopping_chanpin"
                        android:layout_marginLeft="10dp"
                        android:layout_marginRight="10dp"
                        android:layout_toRightOf="@+id/img_shopping_chanpin"
                        android:maxLines="2"
                        android:text="2016春装新款欧美时尚长裙宽松休闲仙女气质超长款拖地连衣裙"
                        android:textColor="@color/black"
                        android:textSize="@dimen/activity_size_13" />

                    <TextView
                        android:id="@+id/tx_shopping_cloth_color"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/order_details_good_name_tv"
                        android:layout_marginLeft="@dimen/activity_size_13"
                        android:layout_marginTop="5dp"
                        android:layout_toRightOf="@+id/img_shopping_chanpin"
                        android:maxLines="2"
                        android:text="颜色分类:"
                        android:textColor="@color/gray"
                        android:textSize="12sp" />

                    <TextView
                        android:id="@+id/order_details_good_color_tv"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/order_details_good_name_tv"
                        android:layout_marginLeft="@dimen/activity_size_3"
                        android:layout_marginTop="5dp"
                        android:layout_toRightOf="@+id/tx_shopping_cloth_color"
                        android:maxLines="2"
                        android:text="天蓝色"
                        android:textColor="@color/gray"
                        android:textSize="12sp" />

                    <TextView
                        android:id="@+id/tx_shopping_cloth_size"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/tx_shopping_cloth_color"
                        android:layout_marginLeft="@dimen/activity_size_13"
                        android:layout_marginTop="5dp"
                        android:layout_toRightOf="@+id/img_shopping_chanpin"
                        android:maxLines="2"
                        android:text="尺码: "
                        android:textColor="@color/gray"
                        android:textSize="12sp" />

                    <TextView
                        android:id="@+id/order_details_good_size_tv"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/tx_shopping_cloth_color"
                        android:layout_marginLeft="@dimen/activity_size_3"
                        android:layout_marginTop="5dp"
                        android:layout_toRightOf="@+id/tx_shopping_cloth_size"
                        android:maxLines="2"
                        android:text="S"
                        android:textColor="@color/gray"
                        android:textSize="12sp" />

                    <TextView
                        android:id="@+id/tx_shopping_cloth_price"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_below="@+id/tx_shopping_cloth_size"
                        android:layout_marginRight="@dimen/activity_size_10"
                        android:layout_marginTop="@dimen/activity_size_15"
                        android:text="¥439"
                        android:textColor="@color/main_color_red"
                        android:textSize="14sp" />

                    <TextView
                        android:id="@+id/tx_goods_count"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_below="@+id/tx_shopping_cloth_color"
                        android:layout_marginLeft="4dp"
                        android:layout_marginRight="12dp"
                        android:layout_marginTop="@dimen/activity_size_5"
                        android:text="x1"
                        android:textColor="@color/black"
                        android:textSize="14sp" />
                    <!--灰色线-->
                    <ImageView
                        android:id="@+id/gray_line2"
                        android:layout_width="@dimen/activity_size_355"
                        android:layout_height="@dimen/activity_size_1"
                        android:layout_below="@+id/img_shopping_chanpin"
                        android:layout_centerHorizontal="true"
                        android:layout_marginTop="@dimen/activity_size_10"
                        android:background="@color/gray2" />


                    <TextView
                        android:id="@+id/good_status_btn_3"
                        android:layout_width="@dimen/activity_size_80"
                        android:layout_height="@dimen/activity_size_28"
                        android:layout_below="@+id/gray_line2"
                        android:layout_marginBottom="@dimen/activity_size_10"
                        android:layout_marginRight="@dimen/activity_size_15"
                        android:layout_marginTop="@dimen/activity_size_10"
                        android:layout_toLeftOf="@+id/good_status_btn_2"
                        android:background="@drawable/btn_shape_gray"
                        android:gravity="center"
                        android:text=""
                        android:textColor="@color/black2"
                        android:textSize="@dimen/activity_size_13" />


                    <TextView
                        android:id="@+id/good_status_btn_2"
                        android:layout_width="@dimen/activity_size_80"
                        android:layout_height="@dimen/activity_size_28"
                        android:layout_below="@+id/gray_line2"
                        android:layout_marginBottom="@dimen/activity_size_10"
                        android:layout_marginRight="@dimen/activity_size_15"
                        android:layout_marginTop="@dimen/activity_size_10"
                        android:layout_toLeftOf="@+id/good_status_btn"
                        android:background="@drawable/btn_shape_gray"
                        android:gravity="center"
                        android:text=""
                        android:textColor="@color/black2"
                        android:textSize="@dimen/activity_size_13" />


                    <TextView
                        android:id="@+id/good_status_btn"
                        android:layout_width="@dimen/activity_size_80"
                        android:layout_height="@dimen/activity_size_28"
                        android:layout_alignParentRight="true"
                        android:layout_below="@+id/gray_line2"
                        android:layout_marginBottom="@dimen/activity_size_10"
                        android:layout_marginRight="@dimen/activity_size_10"
                        android:layout_marginTop="@dimen/activity_size_10"
                        android:background="@drawable/btn_shape_red"
                        android:gravity="center"
                        android:text=""
                        android:textColor="@color/red1"
                        android:textSize="@dimen/activity_size_13" />

                </RelativeLayout>


                <!--下面订单的信息-->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/activity_size_10"
                    android:background="@color/whilte"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="@dimen/activity_size_10"
                            android:layout_marginTop="@dimen/activity_size_10"
                            android:text="订单编号:"
                            android:textColor="@color/black5"
                            android:textSize="@dimen/activity_size_12" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="@dimen/activity_size_10"
                            android:layout_marginTop="@dimen/activity_size_10"
                            android:text="EA960753473"
                            android:textColor="@color/black5"
                            android:textSize="@dimen/activity_size_12" />

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/activity_size_3"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="@dimen/activity_size_10"
                            android:text="支付方式:"
                            android:textColor="@color/black5"
                            android:textSize="@dimen/activity_size_12" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="@dimen/activity_size_10"
                            android:text="支付宝"
                            android:textColor="@color/black5"
                            android:textSize="@dimen/activity_size_12" />

                    </LinearLayout>


                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/activity_size_3"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="@dimen/activity_size_10"
                            android:text="创建时间:"
                            android:textColor="@color/black5"
                            android:textSize="@dimen/activity_size_12" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="@dimen/activity_size_10"
                            android:text="2016.8.20  18:27"
                            android:textColor="@color/black5"
                            android:textSize="@dimen/activity_size_12" />

                    </LinearLayout>


                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/activity_size_3"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="@dimen/activity_size_10"
                            android:text="付款时间:"
                            android:textColor="@color/black5"
                            android:textSize="@dimen/activity_size_12" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="@dimen/activity_size_10"
                            android:text="2016.8.20  18:27"
                            android:textColor="@color/black5"
                            android:textSize="@dimen/activity_size_12" />

                    </LinearLayout>


                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/activity_size_3"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="@dimen/activity_size_10"
                            android:text="发货时间:"
                            android:textColor="@color/black5"
                            android:textSize="@dimen/activity_size_12" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="@dimen/activity_size_10"
                            android:text="2016.8.20  18:27"
                            android:textColor="@color/black5"
                            android:textSize="@dimen/activity_size_12" />

                    </LinearLayout>


                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="@dimen/activity_size_60"
                        android:layout_marginTop="@dimen/activity_size_3"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="@dimen/activity_size_10"
                            android:text="成交时间:"
                            android:textColor="@color/black5"
                            android:textSize="@dimen/activity_size_12" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="@dimen/activity_size_10"
                            android:text="2016.8.20  18:27"
                            android:textColor="@color/black5"
                            android:textSize="@dimen/activity_size_12" />

                    </LinearLayout>


                </LinearLayout>

            </LinearLayout>
        </LinearLayout>
    </cn.xiaocool.android_etong.util.ReboundScrollView>
</LinearLayout>
