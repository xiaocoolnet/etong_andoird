<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/gray2"
    android:orientation="vertical">

    <include layout="@layout/activity_top"></include>

    <cn.xiaocool.android_etong.util.ReboundScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/gray2"
            android:orientation="vertical">


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/gray2"
                android:orientation="vertical">


                <!--店铺、产品详情-->

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/gray2"
                    android:orientation="vertical">


                    <!--店铺详情-->
                    <LinearLayout
                        android:background="@color/whilte"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/activity_size_60"
                        >

                        <ImageView
                            android:layout_width="@dimen/activity_size_34"
                            android:layout_height="@dimen/activity_size_34"
                            android:layout_marginLeft="@dimen/activity_size_10"
                            android:layout_gravity="center"
                            android:background="@mipmap/ic_shop_yuan" />

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="@dimen/activity_size_10"
                            android:orientation="vertical">


                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="@dimen/activity_size_5"
                                android:text="e小妞原创店铺"
                                android:textColor="@color/black1"
                                android:textSize="@dimen/activity_size_13" />

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="@dimen/activity_size_5"
                                android:textSize="@dimen/activity_size_12"
                                android:textColor="@color/black3"
                                android:text="本店经营各类女装、男装,全国批发各种衣服、鞋袜，正品供应，如有需求请咨询。"
                                android:layout_marginRight="@dimen/activity_size_10"
                                android:maxLines="2"
                                android:ellipsize="end"
                                />
                        </LinearLayout>
                    </LinearLayout>



                    <!--商品详情-->

                    <LinearLayout
                        android:layout_marginTop="@dimen/activity_size_1"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <RelativeLayout
                            android:id="@+id/rl_good_infor_up"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:background="@color/whilte">

                            <ImageView
                                android:id="@+id/seller_order_img_shopping_chanpin"
                                android:layout_width="@dimen/activity_size_80"
                                android:layout_height="@dimen/activity_size_80"
                                android:layout_marginLeft="@dimen/activity_size_10"
                                android:layout_marginTop="@dimen/activity_size_10"
                                android:background="@mipmap/ic_chanpin" />

                            <TextView
                                android:id="@+id/seller_order_tx_shopping_cloth_name"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_alignTop="@+id/seller_order_img_shopping_chanpin"
                                android:layout_marginLeft="10dp"
                                android:layout_marginRight="10dp"
                                android:layout_toRightOf="@+id/seller_order_img_shopping_chanpin"
                                android:maxLines="2"
                                android:text="2016春装新款欧美时尚长裙宽松休闲仙女气质超长款拖地连衣裙"
                                android:textColor="@color/black"
                                android:textSize="@dimen/activity_size_13" />

                            <TextView
                                android:id="@+id/seller_order_tx_shopping_cloth_color"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_below="@+id/seller_order_tx_shopping_cloth_name"
                                android:layout_marginLeft="@dimen/activity_size_13"
                                android:layout_marginTop="5dp"
                                android:layout_toRightOf="@+id/seller_order_img_shopping_chanpin"
                                android:maxLines="2"
                                android:text="颜色分类:"
                                android:textColor="@color/gray"
                                android:textSize="12sp" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_below="@+id/seller_order_tx_shopping_cloth_name"
                                android:layout_marginLeft="@dimen/activity_size_3"
                                android:layout_marginTop="5dp"
                                android:layout_toRightOf="@+id/seller_order_tx_shopping_cloth_color"
                                android:maxLines="2"
                                android:text="天蓝色"
                                android:textColor="@color/gray"
                                android:textSize="12sp" />

                            <TextView
                                android:id="@+id/seller_order_tx_shopping_cloth_size"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_below="@+id/seller_order_tx_shopping_cloth_color"
                                android:layout_marginLeft="@dimen/activity_size_13"
                                android:layout_marginTop="5dp"
                                android:layout_toRightOf="@+id/seller_order_img_shopping_chanpin"
                                android:maxLines="1"
                                android:text="尺码: "
                                android:textColor="@color/gray"
                                android:textSize="12sp" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_below="@+id/seller_order_tx_shopping_cloth_color"
                                android:layout_marginLeft="@dimen/activity_size_3"
                                android:layout_marginTop="5dp"
                                android:layout_toRightOf="@+id/seller_order_tx_shopping_cloth_size"
                                android:maxLines="1"
                                android:text="S"
                                android:textColor="@color/gray"
                                android:textSize="12sp" />


                            <TextView
                                android:id="@+id/seller_order_tx_goods_count"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_alignParentRight="true"
                                android:layout_below="@+id/seller_order_tx_shopping_cloth_color"
                                android:layout_marginLeft="4dp"
                                android:layout_marginRight="12dp"
                                android:layout_marginTop="@dimen/activity_size_5"
                                android:text="x1"
                                android:textColor="@color/black"
                                android:textSize="14sp" />


                            <TextView
                                android:layout_marginBottom="@dimen/activity_size_5"
                                android:id="@+id/pay_now_price"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_alignParentRight="true"
                                android:layout_below="@+id/seller_order_tx_shopping_cloth_size"
                                android:layout_marginRight="@dimen/activity_size_10"
                                android:layout_marginTop="@dimen/activity_size_5"
                                android:text="¥439"
                                android:textColor="@color/main_color_red"
                                android:textSize="14sp" />
                        </RelativeLayout>


                    </LinearLayout>


                </LinearLayout>


                <!--支付方式选择-->

                <RelativeLayout
                    android:id="@+id/rl_payWay0"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/activity_size_55"
                    android:layout_marginTop="@dimen/activity_size_22"
                    android:background="@color/whilte">

                    <ImageView
                        android:id="@+id/pay_way0_icon"
                        android:layout_width="@dimen/activity_size_30"
                        android:layout_height="@dimen/activity_size_30"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="@dimen/activity_size_10"
                        android:background="@mipmap/ic_ka" />

                    <TextView
                        android:id="@+id/pay_way0_name"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/activity_size_15"
                        android:layout_marginTop="@dimen/activity_size_10"
                        android:layout_toRightOf="@+id/pay_way0_icon"
                        android:text="余额支付"
                        android:textColor="@color/black2"
                        android:textSize="@dimen/activity_size_15" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/pay_way0_name"
                        android:layout_marginLeft="@dimen/activity_size_15"
                        android:layout_marginTop="@dimen/activity_size_5"
                        android:layout_toRightOf="@+id/pay_way0_icon"
                        android:text="使用e通商城钱包余额支付"
                        android:textColor="@color/black3"
                        android:textSize="@dimen/activity_size_12" />

                    <ImageView
                        android:id="@+id/iv_payWay0_item"
                        android:layout_width="@dimen/activity_size_18"
                        android:layout_height="@dimen/activity_size_18"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:layout_marginRight="@dimen/activity_size_10"
                        android:background="@drawable/btn_selecter_icon" />

                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/rl_payWay1"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/activity_size_55"
                    android:layout_marginTop="@dimen/activity_size_1"
                    android:background="@color/whilte">

                    <ImageView
                        android:id="@+id/pay_way1_icon"
                        android:layout_width="@dimen/activity_size_30"
                        android:layout_height="@dimen/activity_size_30"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="@dimen/activity_size_10"
                        android:background="@mipmap/ic_weixintubiao" />

                    <TextView
                        android:id="@+id/pay_way1_name"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/activity_size_15"
                        android:layout_marginTop="@dimen/activity_size_10"
                        android:layout_toRightOf="@+id/pay_way1_icon"
                        android:text="微信支付"
                        android:textColor="@color/black2"
                        android:textSize="@dimen/activity_size_15" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/pay_way1_name"
                        android:layout_marginLeft="@dimen/activity_size_15"
                        android:layout_marginTop="@dimen/activity_size_5"
                        android:layout_toRightOf="@+id/pay_way1_icon"
                        android:text="推荐安装微信5.0及以上用户使用"
                        android:textColor="@color/black3"
                        android:textSize="@dimen/activity_size_12" />

                    <ImageView
                        android:id="@+id/iv_payWay1_item"
                        android:layout_width="@dimen/activity_size_18"
                        android:layout_height="@dimen/activity_size_18"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:layout_marginRight="@dimen/activity_size_10"
                        android:background="@drawable/btn_selecter_icon" />

                </RelativeLayout>


                <RelativeLayout
                    android:id="@+id/rl_payWay2"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/activity_size_55"
                    android:layout_marginTop="@dimen/activity_size_1"
                    android:background="@color/whilte">

                    <ImageView
                        android:id="@+id/pay_way2_icon"
                        android:layout_width="@dimen/activity_size_30"
                        android:layout_height="@dimen/activity_size_30"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="@dimen/activity_size_10"
                        android:background="@mipmap/ic_bao" />

                    <TextView
                        android:id="@+id/pay_way2_name"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/activity_size_15"
                        android:layout_marginTop="@dimen/activity_size_10"
                        android:layout_toRightOf="@+id/pay_way2_icon"
                        android:text="支付宝支付"
                        android:textColor="@color/black2"
                        android:textSize="@dimen/activity_size_15" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/pay_way2_name"
                        android:layout_marginLeft="@dimen/activity_size_15"
                        android:layout_marginTop="@dimen/activity_size_5"
                        android:layout_toRightOf="@+id/pay_way2_icon"
                        android:text="推荐有支付宝的用户使用"
                        android:textColor="@color/black3"
                        android:textSize="@dimen/activity_size_12" />

                    <ImageView
                        android:id="@+id/iv_payWay2_item"
                        android:layout_width="@dimen/activity_size_18"
                        android:layout_height="@dimen/activity_size_18"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:layout_marginRight="@dimen/activity_size_10"
                        android:background="@drawable/btn_selecter_icon" />

                </RelativeLayout>


                <RelativeLayout
                    android:id="@+id/rl_payShare"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/activity_size_55"
                    android:layout_marginTop="@dimen/activity_size_10"
                    android:background="@color/whilte">

                    <ImageView
                        android:id="@+id/pay_share_icon"
                        android:layout_width="@dimen/activity_size_30"
                        android:layout_height="@dimen/activity_size_30"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="@dimen/activity_size_10" />

                    <TextView
                        android:id="@+id/pay_share_name"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/activity_size_15"
                        android:layout_marginTop="@dimen/activity_size_10"
                        android:layout_toRightOf="@+id/pay_share_icon"
                        android:text="立即分享"
                        android:textColor="@color/black2"
                        android:textSize="@dimen/activity_size_15" />


                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/pay_share_name"
                        android:layout_marginLeft="@dimen/activity_size_15"
                        android:layout_marginTop="@dimen/activity_size_5"
                        android:layout_toRightOf="@+id/pay_share_icon"
                        android:text="分享到微信、朋友圈、QQ、微博等"
                        android:textColor="@color/black3"
                        android:textSize="@dimen/activity_size_12" />

                    <ImageView
                        android:id="@+id/iv_payShare_item"
                        android:layout_width="@dimen/activity_size_18"
                        android:layout_height="@dimen/activity_size_18"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:layout_marginRight="@dimen/activity_size_10"
                        android:background="@drawable/btn_selecter_icon" />

                </RelativeLayout>


                <RelativeLayout
                    android:id="@+id/rl_confirm_pay"
                    android:layout_width="@dimen/activity_size_350"
                    android:layout_height="@dimen/activity_size_45"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="@dimen/activity_size_50"
                    android:background="@drawable/button_shape">

                    <TextView
                        android:id="@+id/pay_now_price_tv"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerInParent="true"
                        android:text="确认支付"
                        android:textColor="@color/whilte"
                        android:textSize="@dimen/activity_size_16" />
                </RelativeLayout>

            </LinearLayout>

            <!--装两个横条-->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="@dimen/activity_size_30"
                android:orientation="vertical">
                <!--第一横条-->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <!--图标0-->
                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/activity_size_70"
                        android:layout_weight="1">

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerInParent="true"
                            android:orientation="vertical">

                            <ImageView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_centerInParent="true"
                                android:layout_gravity="center_horizontal"
                                android:background="@mipmap/ic_weixin" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_alignParentBottom="true"
                                android:layout_centerHorizontal="true"
                                android:layout_gravity="center_horizontal"
                                android:layout_marginTop="@dimen/activity_size_5"
                                android:text="微信好友"
                                android:textSize="@dimen/activity_size_12" />
                        </LinearLayout>
                    </RelativeLayout>

                    <!--图标1-->
                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/activity_size_70"
                        android:layout_weight="1">

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerInParent="true"
                            android:orientation="vertical">

                            <ImageView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_centerInParent="true"
                                android:layout_gravity="center_horizontal"
                                android:background="@mipmap/ic_fenxiang" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_alignParentBottom="true"
                                android:layout_centerHorizontal="true"
                                android:layout_gravity="center_horizontal"
                                android:layout_marginTop="@dimen/activity_size_5"
                                android:text="微信朋友圈"
                                android:textSize="@dimen/activity_size_12" />
                        </LinearLayout>
                    </RelativeLayout>
                    <!--图标2-->
                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/activity_size_70"
                        android:layout_weight="1">

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerInParent="true"
                            android:orientation="vertical">

                            <ImageView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_centerInParent="true"
                                android:layout_gravity="center_horizontal"
                                android:background="@mipmap/ic_qq" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_alignParentBottom="true"
                                android:layout_centerHorizontal="true"
                                android:layout_gravity="center_horizontal"
                                android:layout_marginTop="@dimen/activity_size_5"
                                android:text="QQ好友"
                                android:textSize="@dimen/activity_size_12" />
                        </LinearLayout>
                    </RelativeLayout>
                    <!--图标3-->
                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/activity_size_70"
                        android:layout_weight="1">

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerInParent="true"
                            android:orientation="vertical">

                            <ImageView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_centerInParent="true"
                                android:layout_gravity="center_horizontal"
                                android:background="@mipmap/ic_qq" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_alignParentBottom="true"
                                android:layout_centerHorizontal="true"
                                android:layout_gravity="center_horizontal"
                                android:layout_marginTop="@dimen/activity_size_5"
                                android:text="QQ空间"
                                android:textSize="@dimen/activity_size_12" />
                        </LinearLayout>
                    </RelativeLayout>

                </LinearLayout>


                <!--第二横条-->

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <!--图标0-->
                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/activity_size_70"
                        android:layout_weight="1">

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerInParent="true"
                            android:orientation="vertical">

                            <ImageView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_centerInParent="true"
                                android:layout_gravity="center_horizontal"
                                android:background="@mipmap/ic_weibo" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_alignParentBottom="true"
                                android:layout_centerHorizontal="true"
                                android:layout_gravity="center_horizontal"
                                android:layout_marginTop="@dimen/activity_size_5"
                                android:text="微博"
                                android:textSize="@dimen/activity_size_12" />
                        </LinearLayout>
                    </RelativeLayout>

                    <!--图标1-->
                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/activity_size_70"
                        android:layout_weight="1">

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerInParent="true"
                            android:orientation="vertical">

                            <ImageView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_centerInParent="true"
                                android:layout_gravity="center_horizontal"
                                android:background="@mipmap/ic_bao" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_alignParentBottom="true"
                                android:layout_centerHorizontal="true"
                                android:layout_gravity="center_horizontal"
                                android:layout_marginTop="@dimen/activity_size_5"
                                android:text="支付宝"
                                android:textSize="@dimen/activity_size_12" />
                        </LinearLayout>
                    </RelativeLayout>
                    <!--图标2-->
                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/activity_size_70"
                        android:layout_weight="1">

                    </RelativeLayout>
                    <!--图标3-->
                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/activity_size_70"
                        android:layout_weight="1">


                    </RelativeLayout>

                </LinearLayout>

            </LinearLayout>
        </LinearLayout>
    </cn.xiaocool.android_etong.util.ReboundScrollView>
</LinearLayout>