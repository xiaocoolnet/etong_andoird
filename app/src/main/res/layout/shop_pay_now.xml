<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/gray2"
    android:orientation="vertical">

    <include layout="@layout/activity_top"></include>


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/activity_size_100"
        android:layout_marginTop="@dimen/activity_size_2"
        android:background="@color/gray5">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true">

            <ImageView
                android:layout_width="@dimen/activity_size_34"
                android:layout_height="@dimen/activity_size_34"
                android:layout_gravity="center"
                android:background="@mipmap/ic_shop_yuan" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/activity_size_10"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="¥"
                        android:textColor="@color/red1"
                        android:textSize="@dimen/activity_size_14" />

                    <TextView
                        android:id="@+id/pay_now_price"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="199"
                        android:textColor="@color/red1"
                        android:textSize="@dimen/activity_size_14" />
                </LinearLayout>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/activity_size_3"
                    android:text="e小妞原创店铺"
                    android:textColor="@color/black3"
                    android:textSize="@dimen/activity_size_11" />
            </LinearLayout>
        </LinearLayout>

    </RelativeLayout>


    <!--支付方式选择-->

    <RelativeLayout
        android:id="@+id/rl_payWay0"
        android:layout_width="match_parent"
        android:layout_height="@dimen/activity_size_55"
        android:layout_marginTop="@dimen/activity_size_22"
        android:background="@color/whilte">

        <ImageView
            android:id="@+id/pay_way0_icon"
            android:layout_width="@dimen/activity_size_30"
            android:layout_height="@dimen/activity_size_30"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/activity_size_10"
            android:background="@mipmap/ic_ka" />

        <TextView
            android:id="@+id/pay_way0_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/activity_size_15"
            android:layout_marginTop="@dimen/activity_size_10"
            android:layout_toRightOf="@+id/pay_way0_icon"
            android:text="银行卡支付"
            android:textColor="@color/black2"
            android:textSize="@dimen/activity_size_15" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/pay_way0_name"
            android:layout_marginLeft="@dimen/activity_size_15"
            android:layout_marginTop="@dimen/activity_size_5"
            android:layout_toRightOf="@+id/pay_way0_icon"
            android:text="支持储蓄卡银行卡，无需开通网银"
            android:textColor="@color/black3"
            android:textSize="@dimen/activity_size_12" />

        <ImageView
            android:id="@+id/iv_payWay0_item"
            android:layout_width="@dimen/activity_size_18"
            android:layout_height="@dimen/activity_size_18"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="@dimen/activity_size_10"
            android:background="@drawable/btn_selecter_icon" />

    </RelativeLayout>

    <RelativeLayout
        android:visibility="gone"
        android:id="@+id/rl_payWay1"
        android:layout_width="match_parent"
        android:layout_height="@dimen/activity_size_55"
        android:layout_marginTop="@dimen/activity_size_1"
        android:background="@color/whilte">

        <ImageView
            android:id="@+id/pay_way1_icon"
            android:layout_width="@dimen/activity_size_30"
            android:layout_height="@dimen/activity_size_30"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/activity_size_10"
            android:background="@mipmap/ic_weixintubiao" />

        <TextView
            android:id="@+id/pay_way1_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/activity_size_15"
            android:layout_marginTop="@dimen/activity_size_10"
            android:layout_toRightOf="@+id/pay_way1_icon"
            android:text="微信支付"
            android:textColor="@color/black2"
            android:textSize="@dimen/activity_size_15" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/pay_way1_name"
            android:layout_marginLeft="@dimen/activity_size_15"
            android:layout_marginTop="@dimen/activity_size_5"
            android:layout_toRightOf="@+id/pay_way1_icon"
            android:text="推荐安装微信5.0及以上用户使用"
            android:textColor="@color/black3"
            android:textSize="@dimen/activity_size_12" />

        <ImageView
            android:id="@+id/iv_payWay1_item"
            android:layout_width="@dimen/activity_size_18"
            android:layout_height="@dimen/activity_size_18"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="@dimen/activity_size_10"
            android:background="@drawable/btn_selecter_icon" />

    </RelativeLayout>


    <RelativeLayout
        android:id="@+id/rl_payWay2"
        android:layout_width="match_parent"
        android:layout_height="@dimen/activity_size_55"
        android:layout_marginTop="@dimen/activity_size_1"
        android:background="@color/whilte">

        <ImageView
            android:id="@+id/pay_way2_icon"
            android:layout_width="@dimen/activity_size_30"
            android:layout_height="@dimen/activity_size_30"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/activity_size_10"
            android:background="@mipmap/ic_bao" />

        <TextView
            android:id="@+id/pay_way2_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/activity_size_15"
            android:layout_marginTop="@dimen/activity_size_10"
            android:layout_toRightOf="@+id/pay_way2_icon"
            android:text="支付宝支付"
            android:textColor="@color/black2"
            android:textSize="@dimen/activity_size_15" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/pay_way2_name"
            android:layout_marginLeft="@dimen/activity_size_15"
            android:layout_marginTop="@dimen/activity_size_5"
            android:layout_toRightOf="@+id/pay_way2_icon"
            android:text="推荐有支付宝的用户使用"
            android:textColor="@color/black3"
            android:textSize="@dimen/activity_size_12" />

        <ImageView
            android:id="@+id/iv_payWay2_item"
            android:layout_width="@dimen/activity_size_18"
            android:layout_height="@dimen/activity_size_18"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="@dimen/activity_size_10"
            android:background="@drawable/btn_selecter_icon" />

    </RelativeLayout>


    <RelativeLayout
        android:id="@+id/rl_confirm_pay"
        android:layout_width="@dimen/activity_size_350"
        android:layout_height="@dimen/activity_size_45"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="@dimen/activity_size_50"
        android:background="@drawable/button_shape">

        <TextView
            android:id="@+id/pay_now_price_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="确认支付"
            android:textColor="@color/whilte"
            android:textSize="@dimen/activity_size_16" />
    </RelativeLayout>
</LinearLayout>
