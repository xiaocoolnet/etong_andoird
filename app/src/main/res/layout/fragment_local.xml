<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:background="@color/gray2"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <RelativeLayout
        android:id="@+id/lin"
        android:background="@color/main_color_red"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
    </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:background="@color/main_color_red"
            >
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:text="本地专区"
                android:textColor="@color/white"
                android:textSize="20sp"
                />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:background="@mipmap/ic_xiaoxi"
                android:layout_marginRight="24dp"
                />
        </RelativeLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

    <cn.xiaocool.android_etong.util.ReboundScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
        <!--<fragment-->
            <!--android:id="@+id/fragment_cycle_viewpager_content_local"-->
            <!--android:name="cn.xiaocool.android_etong.adapter.lib.CycleViewPager"-->
            <!--android:layout_width="match_parent"-->
            <!--android:layout_height="171dip" />-->
            <com.daimajia.slider.library.SliderLayout
                android:id="@+id/slider"
                android:layout_width="match_parent"
                android:layout_marginBottom="10dp"
                android:layout_height="160dp">
            </com.daimajia.slider.library.SliderLayout>
        <!--美丽的小图标-->
        <include layout="@layout/loace_item1"/>
        <include layout="@layout/local_item2"/>
            <!--专区-->
        <include layout="@layout/local_zhuanqu"/>

        <RelativeLayout
            android:background="@color/whilte"
            android:layout_width="match_parent"
            android:layout_height="34dp"
            >
            <LinearLayout
                android:gravity="center"
                android:layout_centerInParent="true"
                android:layout_width="wrap_content"
                android:layout_height="match_parent">
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@mipmap/ic_yishoucang"
                    />
              <TextView
                  android:id="@+id/cainixihuan"
                  android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
                  android:layout_marginLeft="2dp"
                  android:text="猜你喜欢"
                  android:textColor="@color/main_color_red"
                  android:textSize="15sp"
                  />

            </LinearLayout>


        </RelativeLayout>
            <!--餐厅信息-->
        <cn.xiaocool.android_etong.util.NoScrollListView
            android:layout_marginTop="10dp"
            android:id="@+id/list_local"
            android:dividerHeight="2dp"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
        </cn.xiaocool.android_etong.util.NoScrollListView>

        </LinearLayout>
    </cn.xiaocool.android_etong.util.ReboundScrollView>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="50dp">
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@mipmap/ic_fenlei"
                android:layout_centerVertical="true"
                android:layout_marginLeft="15dp"
                />
            <TextView
                android:id="@+id/et_search"
                android:layout_centerInParent="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:hint="搜索商家、分类"
                android:textSize="13sp"
                android:gravity="center"
                android:background="@mipmap/ic_sousuokuang"
                />
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@mipmap/ic_search_gray"
                android:layout_centerVertical="true"
                android:layout_marginLeft="80dp"
                />

        </RelativeLayout>
    </RelativeLayout>
</LinearLayout>