<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#fff"
    android:orientation="vertical" >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/activity_size_45">
        <!--返回按钮的布局-->
        <RelativeLayout
            android:id="@+id/rl_back"
            android:layout_width="@dimen/activity_size_60"
            android:layout_height="match_parent">
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@mipmap/ic_fanhui_left_red"
                android:layout_centerVertical="true"
                android:layout_marginLeft="@dimen/activity_size_15"/>
        </RelativeLayout>
        <!--标题头文本-->
        <TextView
            android:id="@+id/top_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/text_size_20"
            android:layout_centerInParent="true"
            android:textColor="@color/black"
            android:text="收货地址"
            />
    </RelativeLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/view_color"
        ></RelativeLayout>

	<FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="0.9" >
    <ListView
        android:id="@+id/myset_address_listView1"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:cacheColorHint="@null"
        android:divider="@drawable/button_line"
        android:listSelector="#00000000"
        android:overScrollMode="never"
        android:scrollbars="none" >
    </ListView>
    
    
    <RelativeLayout
	        android:id="@+id/dizhi"
	        android:layout_width="match_parent"
	        android:layout_height="match_parent"
	        android:visibility="gone" >
       <TextView
           android:layout_width="match_parent"
           android:layout_height="match_parent"
           android:text="未添加收货地址"
           android:gravity="center"
           />
        
    </RelativeLayout>
    </FrameLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/view_color"
        ></RelativeLayout>
    <LinearLayout
        android:id="@+id/myset_address_linear"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_gravity="bottom"
        android:padding="5dp"
        android:orientation="vertical"
        android:background="@color/main_color_red"
        android:gravity="center|right" >

        <!-- <TextView
            android:id="@+id/myset_address_button1"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginRight="5dp"
            android:background="@drawable/button_update1"
            android:gravity="center"
            android:text="新增地址"
            android:textColor="#ffffff"
            android:textSize="18sp" /> -->
        <!---->
        <!--<ImageView-->
            <!--android:id="@+id/pd_buy"-->
            <!--android:layout_width="wrap_content"-->
            <!--android:layout_height="wrap_content"-->
            <!--android:layout_gravity="right"-->
            <!--android:src="@drawable/fd_tjshdz" />-->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="添加收货地址"
            android:gravity="center"
            android:textSize="13sp"
            android:textColor="@color/whilte"
            />
    </LinearLayout>


</LinearLayout>