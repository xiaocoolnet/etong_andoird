<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:background="@color/gray_content"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <RelativeLayout
        android:background="@color/main_color_red"
        android:layout_width="match_parent"
        android:layout_height="45dp">
        <RelativeLayout
            android:id="@+id/rl_back"
            android:layout_width="45dp"
            android:layout_height="match_parent">
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@mipmap/ic_fanhui_left"
                android:layout_centerVertical="true"
                android:layout_marginLeft="10dp"
                />
        </RelativeLayout>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="银行卡绑定"
            android:textColor="@color/whilte"
            android:textSize="16sp"
            />
    </RelativeLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/view_color"
        ></RelativeLayout>
    <cn.xiaocool.android_etong.util.ReboundScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/tv0"
                    android:layout_width="350dp"
                    android:layout_height="45dp"
                    android:background="@drawable/select_txt_input"
                    android:gravity="center"
                    android:text="中国工商银行"
                    android:textSize="15sp"
                    android:textColor="@drawable/select_txt_color"
                    android:layout_alignParentBottom="true"
                    android:layout_centerHorizontal="true"
                     />
            </RelativeLayout>
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:id="@+id/tv1"
                    android:layout_marginTop="5dp"
                    android:layout_centerHorizontal="true"
                    android:layout_width="350dp"
                    android:layout_height="45dp"
                    android:background="@drawable/select_txt_input"
                    android:gravity="center"
                    android:text="中国农业银行"
                    android:textSize="15sp"
                    android:textColor="@drawable/select_txt_color"
                    />
            </RelativeLayout>
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:id="@+id/tv2"
                    android:layout_marginTop="5dp"
                    android:layout_centerHorizontal="true"
                    android:layout_width="350dp"
                    android:layout_height="45dp"
                    android:background="@drawable/select_txt_input"
                    android:gravity="center"
                    android:text="中国银行"
                    android:textSize="15sp"
                    android:textColor="@drawable/select_txt_color"
                    />
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:id="@+id/tv3"
                    android:layout_marginTop="5dp"
                    android:layout_centerHorizontal="true"
                    android:layout_width="350dp"
                    android:layout_height="45dp"
                    android:background="@drawable/select_txt_input"
                    android:gravity="center"
                    android:text="中国建设银行"
                    android:textSize="15sp"
                    android:textColor="@drawable/select_txt_color"
                    />
            </RelativeLayout>
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:id="@+id/tv4"
                    android:layout_marginTop="5dp"
                    android:layout_centerHorizontal="true"
                    android:layout_width="350dp"
                    android:layout_height="45dp"
                    android:background="@drawable/select_txt_input"
                    android:gravity="center"
                    android:text="招商银行"
                    android:textSize="15sp"
                    android:textColor="@drawable/select_txt_color"
                    />
            </RelativeLayout>
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:id="@+id/tv5"
                    android:layout_marginTop="5dp"
                    android:layout_centerHorizontal="true"
                    android:layout_width="350dp"
                    android:layout_height="45dp"
                    android:background="@drawable/select_txt_input"
                    android:gravity="center"
                    android:text="交通银行"
                    android:textSize="15sp"
                    android:textColor="@drawable/select_txt_color"
                    />
            </RelativeLayout>
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:id="@+id/tv6"
                    android:layout_marginTop="5dp"
                    android:layout_centerHorizontal="true"
                    android:layout_width="350dp"
                    android:layout_height="45dp"
                    android:background="@drawable/select_txt_input"
                    android:gravity="center"
                    android:text="中国人民银行"
                    android:textSize="15sp"
                    android:textColor="@drawable/select_txt_color"
                    />
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:id="@+id/tv_sure"
                    android:layout_marginTop="50dp"
                    android:layout_centerHorizontal="true"
                    android:layout_width="350dp"
                    android:layout_height="45dp"
                    android:background="@drawable/txt_input1"
                    android:gravity="center"
                    android:text="确定"
                    android:textSize="15sp"
                    android:textColor="@color/whilte"
                    />
            </RelativeLayout>
        </LinearLayout>
    </cn.xiaocool.android_etong.util.ReboundScrollView>


</LinearLayout>