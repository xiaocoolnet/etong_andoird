<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/gray2"
    android:orientation="vertical">

    <include layout="@layout/activity_top"></include>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:orientation="vertical">



        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/activity_size_160"
            android:layout_marginTop="@dimen/activity_size_1"
            android:background="@color/whilte">

            <EditText
                android:id="@+id/mine_write_suggestions_et"
                android:layout_marginTop="@dimen/activity_size_10"
                android:layout_marginBottom="@dimen/activity_size_10"
                android:layout_width="match_parent"
                android:layout_marginLeft="@dimen/activity_size_10"
                android:layout_marginRight="@dimen/activity_size_10"
                android:layout_height="match_parent"
                android:layout_centerHorizontal="true"
                android:background="@null"
                android:hint="亲，写一下您的使用感受和建议吧！"
                android:gravity="top"
                android:textSize="@dimen/activity_size_13" />
        </RelativeLayout>


    </LinearLayout>

    <RelativeLayout
        android:id="@+id/buy_write_comment_now"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="6"
        android:background="@color/red1">

        <TextView
            android:id="@+id/mine_write_suggestions_confirm"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:layout_centerInParent="true"
            android:text="提交建议"
            android:textColor="@color/whilte"
            android:textSize="@dimen/activity_size_15" />

    </RelativeLayout>
</LinearLayout>