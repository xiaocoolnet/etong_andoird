                </LinearLayout>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="10">

                    <ImageView
                        android:layout_width="@dimen/activity_size_8"
                        android:layout_height="@dimen/activity_size_16"
                        android:layout_centerInParent="true"
                        android:background="@mipmap/ic_next" />

                </RelativeLayout>


            </LinearLayout>


            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/activity_size_45"
