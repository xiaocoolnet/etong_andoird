                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/activity_size_100"
                    android:layout_weight="1"
                    android:background="@color/whilte">

                    <ImageView
                        android:id="@+id/order_ticket_pic"
                        android:layout_width="@dimen/activity_size_80"
                        android:layout_height="@dimen/activity_size_80"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="@dimen/activity_size_10"
                        android:background="@mipmap/qrcode" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/activity_size_15"
                        android:layout_marginTop="@dimen/activity_size_20"
                        android:layout_toRightOf="@+id/order_ticket_pic"
                        android:text="火锅套餐"
                        android:textColor="@color/black2"
                        android:textSize="@dimen/activity_size_15" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/activity_size_15"
                        android:layout_marginTop="@dimen/activity_size_45"
                        android:layout_toRightOf="@+id/order_ticket_pic"
                        android:text="100元代金券"
                        android:textColor="@color/gray1"
                        android:textSize="@dimen/activity_size_12" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentBottom="true"
                        android:layout_marginBottom="@dimen/activity_size_10"
                        android:layout_marginLeft="@dimen/activity_size_15"
                        android:layout_toRightOf="@+id/order_ticket_pic"
                        android:text="¥180"
                        android:textColor="@color/red1"
                        android:textSize="@dimen/activity_size_16" />

                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="10"
                    android:background="@color/whilte">

                    <ImageView
                        android:layout_width="@dimen/activity_size_8"
                        android:layout_height="@dimen/activity_size_16"
                        android:layout_centerInParent="true"
                        android:background="@mipmap/ic_next" />

                </RelativeLayout>
            </LinearLayout>
            <!--套餐内容-->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/activity_size_50"
                android:layout_marginTop="@dimen/activity_size_10"
                android:background="@color/whilte"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:layout_marginLeft="@dimen/activity_size_10"
                        android:text="套餐内容"
                        android:textColor="@color/black2"
                        android:textSize="@dimen/activity_size_14" />

                </LinearLayout>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="10">

                    <ImageView
                        android:layout_width="@dimen/activity_size_8"
                        android:layout_height="@dimen/activity_size_16"
                        android:layout_centerInParent="true"
