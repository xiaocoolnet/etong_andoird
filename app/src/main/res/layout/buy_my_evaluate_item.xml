<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/ll_shop_evaluate_item"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/activity_size_45"
        android:background="@color/whilte">

        <ImageView
            android:id="@+id/seller_order_shop_pic_icon"
            android:layout_width="@dimen/activity_size_19"
            android:layout_height="@dimen/activity_size_16"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/activity_size_10"
            android:background="@mipmap/ic_shop_red" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/activity_size_5"
            android:layout_toRightOf="@+id/seller_order_shop_pic_icon"
            android:text="e小妞"
            android:textColor="@color/black2"
            android:textSize="@dimen/activity_size_14" />

        <TextView
            android:id="@+id/seller_order_good_status_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="@dimen/activity_size_15"
            android:text=""
            android:textColor="@color/red1"
            android:textSize="@dimen/text_size_14" />
        <!--灰色线-->
        <ImageView
            android:layout_width="@dimen/activity_size_355"
            android:layout_height="@dimen/activity_size_1"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:background="@color/gray2" />
    </RelativeLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <RelativeLayout
            android:id="@+id/rl_good_infor_up"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/whilte">

            <TextView
                android:id="@+id/shop_my_evaluate_color_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/shop_my_evaluate_name"
                android:layout_marginLeft="@dimen/activity_size_13"
                android:layout_marginTop="5dp"
                android:layout_toRightOf="@+id/shop_my_evaluate_pic"
                android:maxLines="2"
                android:text="颜色分类:"
                android:textColor="@color/gray"
                android:textSize="12sp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/shop_my_evaluate_name"
                android:layout_marginLeft="@dimen/activity_size_3"
                android:layout_marginTop="5dp"
                android:layout_toRightOf="@+id/shop_my_evaluate_color_name"
                android:maxLines="2"
                android:text="天蓝色"
                android:textColor="@color/gray"
                android:textSize="12sp" />

            <TextView
                android:id="@+id/shop_my_evaluate_size_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/shop_my_evaluate_color_name"
                android:layout_marginLeft="@dimen/activity_size_13"
                android:layout_marginTop="5dp"
                android:layout_toRightOf="@+id/shop_my_evaluate_pic"
                android:maxLines="2"
                android:text="尺码: "
                android:textColor="@color/gray"
                android:textSize="12sp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/shop_my_evaluate_color_name"
                android:layout_marginLeft="@dimen/activity_size_3"
                android:layout_marginTop="5dp"
                android:layout_toRightOf="@+id/shop_my_evaluate_size_name"
                android:maxLines="2"
                android:text="S"
                android:textColor="@color/gray"
                android:textSize="12sp" />

            <TextView
                android:id="@+id/shop_my_evaluate_count_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_below="@+id/shop_my_evaluate_size_name"
                android:layout_marginRight="@dimen/activity_size_10"
                android:layout_marginTop="@dimen/activity_size_15"
                android:text="¥439"
                android:textColor="@color/main_color_red"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/seller_order_tx_goods_count"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_below="@+id/shop_my_evaluate_color_name"
                android:layout_marginLeft="4dp"
                android:layout_marginRight="12dp"
                android:layout_marginTop="@dimen/activity_size_5"
                android:text="x1"
                android:textColor="@color/black"
                android:textSize="14sp" />

            <ImageView
                android:id="@+id/shop_my_evaluate_pic"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_marginLeft="12dp"
                android:background="@mipmap/ic_chanpin"
                android:layout_centerVertical="true"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_marginStart="12dp" />

            <TextView
                android:id="@+id/shop_my_evaluate_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:maxLines="2"
                android:text=""
                android:textColor="@color/black"
                android:textSize="@dimen/activity_size_13"
                android:layout_alignParentTop="true"
                android:layout_alignLeft="@+id/shop_my_evaluate_color_name"
                android:layout_alignStart="@+id/shop_my_evaluate_color_name" />


        </RelativeLayout>
        <!--灰色线-->
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/whilte">

            <ImageView
                android:id="@+id/gray_line2"
                android:layout_width="@dimen/activity_size_355"
                android:layout_height="@dimen/activity_size_1"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="@dimen/activity_size_10"
                android:background="@color/gray2" />







            <TextView
                android:id="@+id/shop_evaluate_content"
                android:layout_width="match_parent"
                android:layout_marginLeft="@dimen/activity_size_10"
                android:layout_marginTop="@dimen/activity_size_10"
                android:layout_marginBottom="@dimen/activity_size_10"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_below="@+id/gray_line2"
                android:layout_marginRight="@dimen/activity_size_10"
                android:maxLines="3"
                android:text="非常好非常好"
                android:textColor="@color/black"
                android:textSize="@dimen/activity_size_15" />


        </RelativeLayout>


    </LinearLayout>
    </LinearLayout>