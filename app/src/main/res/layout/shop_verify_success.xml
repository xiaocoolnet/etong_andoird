<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <include layout="@layout/activity_top"></include>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/activity_size_150">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_centerInParent="true">

            <ImageView
                android:layout_width="@dimen/activity_size_60"
                android:layout_height="@dimen/activity_size_60"
                android:background="@mipmap/ic_weixintubiao"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/activity_size_10"
                android:text="验证成功"
                android:textColor="@color/black"
                android:textSize="@dimen/text_size_14" />

        </LinearLayout>
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/activity_size_35">
        <Button
            android:id="@+id/btn_verify_finish"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/btn_yuanjiao_red"
            android:text="完成"
            android:textSize="@dimen/activity_size_14"
            android:textColor="@color/whilte"
            android:layout_marginLeft="@dimen/activity_size_10"
            android:layout_marginRight="@dimen/activity_size_10"
            />
    </RelativeLayout>
</LinearLayout>
