<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="match_parent"
    android:background="@color/gray2">

    <cn.xiaocool.android_etong.util.ReboundScrollView
        android:id="@+id/a"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <com.daimajia.slider.library.SliderLayout
                    android:id="@+id/slider"
                    android:layout_width="match_parent"
                    android:layout_height="160dp"
                    android:layout_marginBottom="10dp">
                </com.daimajia.slider.library.SliderLayout>
            </RelativeLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="150dp"
                android:layout_marginBottom="1dp"
                android:orientation="horizontal">

                <RelativeLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_marginRight="1dp"
                    android:layout_weight="1.3">
                    <!--限时抢购-->
                    <LinearLayout
                        android:id="@+id/homepage_ll_flash_sale"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="@color/whilte"
                        android:gravity="center_horizontal"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="5dp"
                            android:text="限时抢购"
                            android:textColor="@color/main_color_red"
                            android:textSize="16sp"
                            android:textStyle="bold" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="5dp"
                            android:text="限时抢购抢货季"
                            android:textColor="@color/gray1"
                            android:textSize="12sp"
                            android:textStyle="bold"
                            android:id="@+id/textView12" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="5dp"
                            android:text="01：01:01"
                            android:textColor="@color/black"
                            android:textSize="14sp" />

                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="10dp"
                            android:background="@mipmap/ic_qianggou" />
                    </LinearLayout>

                </RelativeLayout>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="2"
                    android:orientation="vertical">
                    <!--新品上市-->
                    <RelativeLayout
                        android:id="@+id/homepage_rl_new_arrival"
                        android:layout_width="match_parent"
                        android:layout_height="74dp"
                        android:background="@color/whilte">

                        <TextView
                            android:id="@+id/tx_homepage_xinpinshangshi"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="20dp"
                            android:layout_marginTop="15dp"
                            android:text="新品上市"
                            android:textColor="#29b8f8"
                            android:textSize="16sp" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignLeft="@+id/tx_homepage_xinpinshangshi"
                            android:layout_below="@+id/tx_homepage_xinpinshangshi"
                            android:layout_marginTop="5dp"
                            android:text="新品上市折上折"
                            android:textColor="@color/gray1"
                            android:textSize="12sp"
                            android:textStyle="bold" />

                        <ImageView
                            android:id="@+id/img_homepage_xinpinshangshi"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerVertical="true"
                            android:layout_marginLeft="50dp"
                            android:layout_marginTop="10dp"
                            android:layout_toRightOf="@+id/tx_homepage_xinpinshangshi"
                            android:background="@mipmap/ic_xinpinshangshi" />

                    </RelativeLayout>
                    <!--每日精选隐藏掉-->
                    <RelativeLayout
                        android:visibility="gone"
                        android:id="@+id/homepage_rl_everyday_choiceness"
                        android:layout_width="match_parent"
                        android:layout_height="74dp"
                        android:background="@color/whilte">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignLeft="@+id/tx_homepage_meirijingxuan"
                            android:layout_below="@+id/tx_homepage_meirijingxuan"
                            android:layout_marginTop="5dp"
                            android:text="限时抢购抢货季"
                            android:textColor="@color/gray1"
                            android:textSize="12sp"
                            android:textStyle="bold" />

                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerVertical="true"
                            android:layout_marginLeft="50dp"
                            android:layout_marginTop="10dp"
                            android:layout_toRightOf="@+id/tx_homepage_meirijingxuan"
                            android:background="@mipmap/ic_jingxuan"
                            android:id="@+id/imageView3" />

                        <TextView
                            android:id="@+id/tx_homepage_meirijingxuan"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="21dp"
                            android:text="每日精选"
                            android:textColor="@color/green"
                            android:textSize="16sp"
                            android:layout_alignTop="@+id/imageView3"
                            android:layout_alignParentLeft="true"
                            android:layout_alignParentStart="true"
                            android:layout_marginStart="21dp" />

                    </RelativeLayout>
                    <!--原天天特价改为品质生活homepage_ll_quality_life-->
                    <RelativeLayout
                        android:id="@+id/homepage_ll_quality_life"
                        android:layout_width="match_parent"
                        android:layout_height="74dp"
                        android:layout_marginTop="1dp"
                        android:background="@color/whilte">

                        <TextView
                            android:id="@+id/tx_homepage_tiantiantejia"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="20dp"
                            android:layout_marginTop="15dp"
                            android:text="品质生活"
                            android:textColor="@color/homepage_orange"
                            android:textSize="16sp" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignLeft="@+id/tx_homepage_tiantiantejia"
                            android:layout_below="@+id/tx_homepage_tiantiantejia"
                            android:layout_marginTop="5dp"
                            android:text="爱家人从这里开始"
                            android:textColor="@color/gray1"
                            android:textSize="12sp"
                            android:textStyle="bold" />

                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerVertical="true"
                            android:layout_marginLeft="50dp"
                            android:layout_marginTop="10dp"
                            android:layout_toRightOf="@+id/tx_homepage_tiantiantejia"
                            android:background="@mipmap/ic_pinzhishenghuo" />
                    </RelativeLayout>
                </LinearLayout>
            </LinearLayout>

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:background="@mipmap/ic_tu"
                />
            <ImageView
                android:id="@+id/etong_home1"
                android:layout_marginTop="5dp"
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:background="@drawable/etong_home1"
                />
            <ImageView
                android:id="@+id/etong_home2"
                android:layout_marginTop="5dp"
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:background="@drawable/etong_home2"
                />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <ImageView
                    android:layout_marginTop="5dp"
                    android:layout_marginBottom="5dp"
                    android:layout_marginRight="2.5dp"
                    android:layout_width="match_parent"
                    android:layout_height="200dp"
                    android:layout_weight="1"
                    android:background="@mipmap/ic_tu1"/>
                <ImageView
                    android:layout_marginTop="5dp"
                    android:layout_marginBottom="5dp"
                    android:layout_marginLeft="2.5dp"
                    android:layout_width="match_parent"
                    android:layout_height="200dp"
                    android:layout_weight="1"
                    android:background="@mipmap/ic_tupian"/>

            </LinearLayout>

            <LinearLayout
                android:visibility="gone"
                android:layout_width="match_parent"
                android:layout_height="150dp"
                android:layout_marginBottom="1dp"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="2"
                    android:orientation="vertical">


                    <!--0元购-->
                    <RelativeLayout
                        android:visibility="gone"
                        android:id="@+id/homepage_rl_zero"
                        android:layout_width="match_parent"
                        android:layout_height="74dp"
                        android:layout_marginTop="1dp"
                        android:background="@color/whilte">

                        <TextView
                            android:id="@+id/tx_homepage_0yuangou"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="20dp"
                            android:layout_marginTop="15dp"
                            android:text="0元购"
                            android:textColor="#9c27b0"
                            android:textSize="16sp" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignLeft="@+id/tx_homepage_0yuangou"
                            android:layout_below="@+id/tx_homepage_0yuangou"
                            android:layout_marginTop="5dp"
                            android:text="海量免单大派送"
                            android:textColor="@color/gray1"
                            android:textSize="12sp"
                            android:textStyle="bold" />

                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerVertical="true"
                            android:layout_marginLeft="70dp"
                            android:layout_marginTop="10dp"
                            android:layout_toRightOf="@+id/tx_homepage_0yuangou"
                            android:background="@mipmap/ic_0yuangou" />
                    </RelativeLayout>
                </LinearLayout>

                <RelativeLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="1dp"
                    android:layout_weight="1.3">
                    <!--品质生活android:visibility="gone"-->
                    <LinearLayout
                        android:visibility="gone"
                        android:id="@+id/homepage_rl_everyday_bargain_price"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="@color/whilte"
                        android:gravity="center_horizontal"
                        android:orientation="vertical">

                        <TextView

                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="5dp"
                            android:text="品质生活"
                            android:textColor="@color/main_color_red"
                            android:textSize="16sp"
                            android:textStyle="bold" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="5dp"
                            android:text="爱家人从这里开始"
                            android:textColor="@color/gray1"
                            android:textSize="12sp"
                            android:textStyle="bold" />

                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="20dp"
                            android:background="@mipmap/ic_pinzhishenghuo" />
                    </LinearLayout>
                </RelativeLayout>
            </LinearLayout>

<!--加入E通，共享生活-->
            <!--<RelativeLayout-->
                <!--android:layout_width="match_parent"-->
                <!--android:layout_height="40dp"-->
                <!--android:layout_marginBottom="1dp"-->
                <!--android:background="@color/whilte">-->

                <!--<TextView-->
                    <!--android:layout_width="wrap_content"-->
                    <!--android:layout_height="wrap_content"-->
                    <!--android:layout_centerInParent="true"-->
                    <!--android:text="加入e通，共享生活"-->
                    <!--android:textColor="@color/black"-->
                    <!--android:textSize="14sp" />-->
            <!--</RelativeLayout>-->
            <!--每日好店-->
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="34dp"
                android:layout_marginBottom="1dp"
                android:background="@color/whilte">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:background="@mipmap/ic_meirihaodian" />
            </RelativeLayout>

            <cn.xiaocool.android_etong.util.NoScrollGridView
                android:id="@+id/homepage_everyday_goodshop_gridview"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:columnWidth="@dimen/activity_size_70"
                android:gravity="center"
                android:horizontalSpacing="@dimen/activity_size_5"
                android:numColumns="2"
                android:padding="@dimen/activity_size_1"
                android:stretchMode="columnWidth"
                android:verticalSpacing="@dimen/activity_size_5">

            </cn.xiaocool.android_etong.util.NoScrollGridView>


            <!--猜你喜欢-->
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="36dp"
                android:layout_marginBottom="1dp"
                android:background="@color/whilte">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:background="@mipmap/ic_cainixihuan" />
            </RelativeLayout>
            <!--猜你喜欢 网格布局-->
            <cn.xiaocool.android_etong.util.NoScrollGridView
                android:id="@+id/homepage_guess_like_gridview"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:columnWidth="@dimen/activity_size_70"
                android:gravity="center"
                android:horizontalSpacing="@dimen/activity_size_5"
                android:numColumns="2"
                android:padding="@dimen/activity_size_1"
                android:stretchMode="columnWidth"
                android:verticalSpacing="@dimen/activity_size_5">>

            </cn.xiaocool.android_etong.util.NoScrollGridView>
        </LinearLayout>
    </cn.xiaocool.android_etong.util.ReboundScrollView>

    <RelativeLayout
        android:visibility="gone"
        android:id="@+id/rl_topbar"
        android:background="@color/red1"
        android:layout_width="match_parent"
        android:layout_height="50dp">
        <ImageView
            android:id="@+id/homepage_type_img"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@mipmap/ic_fenlei"
            android:layout_centerVertical="true"
            android:layout_marginLeft="15dp"
            />
        <TextView
            android:id="@+id/et_search"
            android:layout_centerInParent="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:hint="搜索商家、分类"
            android:textSize="13sp"
            android:gravity="center"
            android:background="@mipmap/ic_sousuokuang"
            />
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@mipmap/ic_search_gray"
            android:layout_centerVertical="true"
            android:layout_marginLeft="80dp"
            />
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@mipmap/ic_xiaoxi"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="15dp"
            />
    </RelativeLayout>

    <cn.xiaocool.android_etong.view.HorizontalListView
        android:visibility="gone"
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:widget="http://schemas.android.com/apk/res-auto"
        android:id="@+id/fenlei_horlist"
        android:divider="#f2f2f2"
        widget:dividerWidth="0.5dp"
        android:layout_width="match_parent"
        android:layout_height="@dimen/activity_size_40"></cn.xiaocool.android_etong.view.HorizontalListView>

    <LinearLayout
        android:id="@+id/ll_top"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:background="@color/main_color_red"
        android:layout_height="wrap_content">
        <RelativeLayout
            android:id="@+id/rl_search"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
        </RelativeLayout>



    </LinearLayout>
</LinearLayout>