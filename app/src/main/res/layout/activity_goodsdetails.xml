<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:background="@color/gray_content"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <ScrollView
        android:layout_above="@+id/bottom"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <RelativeLayout
                android:background="@color/gray_title"
                android:layout_width="match_parent"
                android:layout_height="45dp">
                <RelativeLayout
                    android:id="@+id/rl_back"
                    android:layout_width="45dp"
                    android:layout_height="match_parent">
                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10dp"
                        android:layout_centerVertical="true"
                        android:background="@mipmap/ic_fanhui_left_red"
                        />
                </RelativeLayout>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:text="宝贝详情"
                    android:textColor="@color/black"
                    android:textSize="16sp"
                    />
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_marginRight="10dp"
                    android:layout_centerVertical="true"
                    android:background="@mipmap/ic_etc"
                    />
            </RelativeLayout>
           <RelativeLayout
               android:layout_width="match_parent"
               android:layout_height="wrap_content">
               <ImageView
                   android:id="@+id/img_goods_pic"
                   android:layout_width="375dp"
                   android:layout_height="375dp"
                   android:layout_centerHorizontal="true"
                   android:visibility="gone"
                   />
               <com.daimajia.slider.library.SliderLayout
                   android:id="@+id/slider"
                   android:layout_centerHorizontal="true"
                   android:layout_width="375dp"
                   android:layout_height="375dp">
               </com.daimajia.slider.library.SliderLayout>
               <TextView
                   android:layout_width="50dp"
                   android:layout_height="50dp"
                   android:background="@drawable/tx_oval"
                   android:layout_alignParentRight="true"
                   android:layout_marginTop="10dp"
                   android:layout_marginRight="10dp"
                   android:gravity="center"
                   android:text="图文\n详情"
                   android:textColor="@color/black"
                   />
           </RelativeLayout>
            <RelativeLayout
                android:background="@color/whilte"
                android:layout_width="match_parent"
                android:layout_height="53dp">
                <TextView
                    android:layout_marginTop="10dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:text="商品名称"
                    android:maxLines="2"
                    android:textColor="@color/black"
                    />
                <ImageView
                    android:id="@+id/good_details_iv_like"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/btn_selected_shop_like"
                    android:layout_alignParentRight="true"
                    android:layout_marginRight="10dp"
                    android:layout_marginTop="30dp"
                    />
            </RelativeLayout>
            <RelativeLayout
                android:background="@color/whilte"
                android:layout_width="match_parent"
                android:layout_height="32dp">
                <LinearLayout
                    android:gravity="center_vertical"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">
                    <TextView
                        android:layout_marginLeft="10dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="快递：0.00"
                        />
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="50dp"
                        android:text="江苏常州"
                        />
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="100dp"
                        android:text="已售:240"
                        />
                </LinearLayout>
            </RelativeLayout>

            <RelativeLayout
                android:background="@color/whilte"
                android:layout_marginTop="10dp"
                android:layout_width="match_parent"
                android:layout_height="35dp">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:text="商品规格"
                    android:textColor="@color/black"
                    />
            </RelativeLayout>
            <RelativeLayout
                android:layout_marginBottom="10dp"
                android:background="@color/whilte"
                android:layout_marginTop="1dp"
                android:layout_width="match_parent"
                android:layout_height="95dp">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">
                    <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="match_parent">
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="0dp"
                            android:layout_weight="1"
                            android:layout_marginLeft="10dp"
                            android:text="品牌：e小姐"
                            android:textColor="@color/black"
                            android:textSize="12sp"
                            />
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="0dp"
                            android:layout_weight="1"
                            android:layout_marginLeft="10dp"
                            android:text="风格：波西米亚"
                            android:textColor="@color/black"
                            android:textSize="12sp"
                            />
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="0dp"
                            android:layout_weight="1"
                            android:layout_marginLeft="10dp"
                            android:text="颜色：图片色"
                            android:textColor="@color/black"
                            android:textSize="12sp"
                            />
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="0dp"
                            android:layout_weight="1"
                            android:layout_marginLeft="10dp"
                            android:text="上市时间：2016年"
                            android:textColor="@color/black"
                            android:textSize="12sp"
                            />

                    </LinearLayout>
                    <LinearLayout
                        android:orientation="vertical"
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="match_parent">
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="0dp"
                            android:layout_weight="1"
                            android:layout_marginLeft="10dp"
                            android:text="产地：江苏"
                            android:textColor="@color/black"
                            android:textSize="12sp"
                            />
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="0dp"
                            android:layout_weight="1"
                            android:layout_marginLeft="10dp"
                            android:text="尺码：S M L"
                            android:textColor="@color/black"
                            android:textSize="12sp"
                            />
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="0dp"
                            android:layout_weight="1"
                            android:layout_marginLeft="10dp"
                            android:text="款号：8887#"
                            android:textColor="@color/black"
                            android:textSize="12sp"
                            />
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="0dp"
                            android:layout_weight="1"
                            android:layout_marginLeft="10dp"
                            android:text="面料材质：其他"
                            android:textColor="@color/black"
                            android:textSize="12sp"
                            />
                    </LinearLayout>
                </LinearLayout>
            </RelativeLayout>
            <include layout="@layout/business_goods_evaluate"/>
            <include layout="@layout/business_goods_evaluate"/>
        </LinearLayout>
    </ScrollView>
    <LinearLayout
        android:id="@+id/bottom"
        android:layout_alignParentBottom="true"
        android:layout_width="match_parent"
        android:layout_height="50dp">
        <Button
            android:background="@color/whilte"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:drawableTop="@mipmap/ic_zixun"
            android:paddingTop="5dp"
            android:text="咨询"
            android:textColor="@color/black"
            android:textSize="12sp"
            android:layout_height="match_parent"
            />
        <Button
            android:background="@color/whilte"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:drawableTop="@mipmap/ic_zixun"
            android:paddingTop="5dp"
            android:text="店铺"
            android:textColor="@color/black"
            android:textSize="12sp"
            android:layout_height="match_parent"
            />
        <Button
            android:background="#FF9800"
            android:text="加入购物车"
            android:textColor="@color/whilte"
            android:layout_width="0dp"
            android:layout_weight="1.2"
            android:layout_height="match_parent"
            />
        <Button
            android:id="@+id/btn_lijigoumai"
            android:background="@color/main_color_red"
            android:layout_width="0dp"
            android:layout_weight="1.2"
            android:layout_height="match_parent"
            android:text="立即抢购"
            android:textColor="@color/whilte"
            />

    </LinearLayout>
</RelativeLayout>