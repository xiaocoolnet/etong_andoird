<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:background="@color/gray2">

    <include layout="@layout/activity_top"></include>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            >


           <LinearLayout
               android:layout_width="match_parent"
               android:layout_height="@dimen/activity_size_50"
               android:orientation="vertical"
               android:background="@color/red1">
               <TextView
                   android:id="@+id/tv_time"
                   android:layout_width="match_parent"
                   android:layout_height="0dp"
                   android:layout_weight="1"
                   android:text="距本场结束仅剩："
                   android:textColor="@color/whilte"
                   android:gravity="center"
                   android:textSize="@dimen/activity_size_15"/>
               <LinearLayout
                   android:layout_width="match_parent"
                   android:layout_height="0dp"
                   android:layout_weight="1"
                   android:gravity="center"
                   >
                   <TextView
                       android:layout_width="wrap_content"
                       android:layout_height="wrap_content"
                       android:id="@+id/tv_time1"
                       android:textColor="@color/whilte"
                       />
                   <TextView
                       android:layout_width="wrap_content"
                       android:layout_height="wrap_content"
                       android:id="@+id/tv_time2"
                       android:textColor="@color/whilte"
                       />
                   <TextView
                       android:layout_width="wrap_content"
                       android:layout_height="wrap_content"
                       android:id="@+id/tv_time3"
                       android:textColor="@color/whilte"
                       />


               </LinearLayout>


           </LinearLayout>
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/whilte"
                ></RelativeLayout>
            <com.lzy.widget.tab.PagerSlidingTabStrip
                android:id="@+id/activity_address_tab"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:textColor="@color/main_color_red"
                android:textSize="16sp"
                app:pstsDividerColor="@color/main_color_red"
                app:pstsIndicatorColor="@color/main_color_red"
                app:pstsIndicatorHeight="4dp"
                app:pstsShouldExpand="true"/>

            <android.support.v4.view.ViewPager
                android:id="@+id/activity_address_viewPager"
                android:layout_width="match_parent"
                android:layout_height="match_parent"/>

        </LinearLayout>

</LinearLayout>
