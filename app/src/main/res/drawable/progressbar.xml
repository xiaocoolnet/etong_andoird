<layer-list xmlns:android="http://schemas.android.com/apk/res/android" >

    <item android:id="@android:id/background">

        <shape>

            <corners android:radius="5dip" />

            <gradient
                android:angle="0"
                android:centerColor="#ffcfd4"
                android:centerY="0.75"
                android:endColor="#ffd0d1"
                android:startColor="#ffd8d9" />
        </shape>
    </item>

    <item android:id="@android:id/secondaryProgress">

        <clip>

            <shape>

                <corners android:radius="5dip" />

                <gradient
                    android:angle="0"
                    android:centerColor="#ff0059"
                    android:centerY="0.75"
                    android:endColor="#ff0051"
                    android:startColor="#ff00ae" />
            </shape>
        </clip>
    </item>

    <item android:id="@android:id/progress">

        <clip>

            <shape>

                <corners android:radius="5dip" />

                <gradient
                    android:angle="0"
                    android:endColor="#ff0011"
                    android:startColor="#c8ff0062" />
            </shape>
        </clip>
    </item>

</layer-list>  